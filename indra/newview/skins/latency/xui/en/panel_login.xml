<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 name="panel_login"
 top="600"
 left="0"
 height="600"
 width="1130"
 follows="all"
 layout="topleft"
 focus_root="true"
>
    <panel.string
     name="real_url"
     translate="false"
    >
        http://phoenixviewer.com/app/loginV3/
    </panel.string>
    <string
     name="reg_in_client_url"
     translate="false"
    >
        http://secondlife.eniac15.lindenlab.com/reg-in-client/
    </string>
    <panel.string
     name="forgot_password_url"
    >
        http://secondlife.com/account/request.php
    </panel.string>
    <!-- *NOTE: Custom resize logic for login_html in llpanellogin.cpp -->
    <web_browser
     name="login_html"
     top="0"
     left="0"
     height="520"
     width="1130"
     follows="all"
     bg_opaque_color="Black"
     border_visible="false"
     start_url=""
     tab_stop="false"
     trusted_content="true"
    />
    <layout_stack
     name="login_widgets"
     top="519"
     height="80"
     width="1130"
     follows="left|bottom|right"
     layout="topleft"
     animate="false"
     clip="false"
     orientation="horizontal"
    >
        <layout_panel
         name="login"
         height="80"
         width="350"
         follows="left|bottom"
         layout="topleft"
         auto_resize="false"
         min_width="350"
        >
            <text
             name="username_text"
             top="8"
             left="15"
             height="16"
             width="150"
             follows="left|bottom"
             font="SansSerifSmall"
            >
                Username:
            </text>
            <combo_box
             name="username_combo"
             tool_tip="The account name you chose when you registered, like bobsmith420 or Steller Sunshine"
             top_pad="2"
             left="15"
             height="22"
             width="178"
             follows="left|bottom"
             allow_text_entry="true"
             combo_editor.prevalidate_callback="ascii"
             commit_on_focus_lost="false"
             max_chars="128"
            >
            </combo_box>
            <text
             name="password_text"
             top="8"
             left_pad="8"
             height="16"
             width="128"
             follows="left|bottom"
             font="SansSerifSmall"
            >
                Password:
            </text>
            <line_editor
             name="password_edit"
             top_pad="2"
             height="22"
             width="130"
             follows="left|bottom"
             commit_on_focus_lost="false"
             is_password="true"
             max_length_bytes="16"
             select_on_focus="true"
            />
            <check_box
             name="remember_check"
             label="Remember password"
             top_pad="4"
             height="16"
             width="130"
             follows="left|bottom"
             control_name="RememberPassword"
             font="SansSerifSmall"
            />
            <button
             name="remove_user_btn"
             label=""
             tool_tip="Remove this username"
             top="28"
             left_pad="4"
             height="18"
             width="18"
             follows="left|bottom"
             layout="topleft"
             image_pressed="TrashItem_Press"
             image_selected="TrashItem_Press"
             image_unselected="TrashItem_Off"
            />
        </layout_panel>
        <layout_panel
         name="start_location_panel"
         height="80"
         width="175"
         follows="left|bottom"
         layout="topleft"
         auto_resize="false"
         min_width="175"
        >
            <text
             name="start_location_text"
             top="8"
             left="10"
             height="16"
             width="130"
             follows="left|bottom"
             font="SansSerifSmall"
            >
                Start at:
            </text>
            <combo_box
             name="start_location_combo"
             top_pad="2"
             height="22"
             width="165"
             follows="left|bottom"
             allow_text_entry="true"
             control_name="NextLoginLocation"
             max_chars="128"
            >
                <combo_box.item
                 name="MyLastLocation"
                 label="Last location"
                 value="last"
                />
                <combo_box.item
                 name="MyHome"
                 label="Home"
                 value="home"
                />
                <combo_box.item
                 name="Typeregionname"
                 label="&lt;Type region name&gt;"
                 value=""
                />
            </combo_box>
        </layout_panel>
        <layout_panel
         name="grid_panel"
         height="80"
         width="145"
         follows="left|bottom"
         layout="topleft"
         auto_resize="false"
         visible="true"
        >
            <text
             name="grid_login_text"
             top="8"
             left="10"
             height="16"
             width="128"
             follows="left|bottom"
             font="SansSerifSmall"
            >
                Log into Grid:
            </text>
            <combo_box
             name="server_combo"
             top_pad="2"
             left="10"
             height="23"
             width="135"
             follows="left|right|bottom"
             layout="topleft"
             allow_text_entry="false"
             font="SansSerifSmall"
             max_chars="256"
            />
        </layout_panel>
        <layout_panel
         name="links_login_panel"
         height="80"
         width="290"
         follows="left|bottom"
         layout="topleft"
         auto_resize="false"
        >
            <text
             name="create_new_account_text"
             top="8"
             left="10"
             height="16"
             width="280"
             follows="left|bottom"
             font="SansSerifSmall"
             text_color="EmphasisColor"
            >
                Create an account
            </text>
            <button
             name="connect_btn"
             label="Log In"
             top_pad="2"
             height="23"
             width="90"
             follows="left|bottom"
             layout="topleft"
            />
            <text
             name="forgot_password_text"
             top_pad="2"
             height="16"
             width="280"
             follows="left|bottom"
             font="SansSerifSmall"
             text_color="EmphasisColor"
            >
                Forgot your username or password?
            </text>
        </layout_panel>
        <layout_panel
         name="mode_selection"
         height="80"
         width="210"
         follows="right|bottom"
         min_width="100"
         tab_stop="false"
        >
            <text
             name="mode_selection_text"
             top="8"
             right="-15"
             height="16"
             width="200"
             follows="right|bottom"
             font="SansSerif"
             font.size="Large"
             font.style="BOLD"
             halign="right"
            >
                SELECT MODE
            </text>
            <combo_box
             name="mode_combo"
             tool_tip="Select which style of viewer you are most familiar with to set your defaults to appropriately."
             top="35"
             left_pad="10"
             right="-15"
             height="23"
             width="110"
             follows="right|bottom"
             max_chars="128"
            >
                <combo_box.item
                 name="Firestorm"
                 label="Firestorm"
                 value="settings_firestorm.xml"
                />
                <combo_box.item
                 name="Phoenix"
                 label="Phoenix"
                 value="settings_phoenix.xml"
                />
                <combo_box.item
                 name="V3"
                 label="Viewer 3"
                 value="settings_v3.xml"
                />
                <combo_box.item
                 name="Hybrid"
                 label="Hybrid"
                 value="settings_hybrid.xml"
                />
                <combo_box.item
                 name="Latency"
                 label="Latency"
                 value="settings_latency.xml"
                />
            </combo_box>
        </layout_panel>
    </layout_stack>
</panel>
