<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Profile Edit" name="edit_profile_panel">
  <string name="CaptionTextAcctInfo">[ACCTTYPE] [PAYMENTINFO] [FIRESTORM][FSDEV][FSSUPP][FSQA][FSGW]</string>
  <!-- The previous line was [PAYMENTINFO] [AGEVERIFICATION], but they're not
    sending the latter any more. ...TS -->
  <string name="FSDev" value="開発者" />
  <string name="FSSupp" value="サポート" />
  <string name="FSQualityAssurance" value="バグハンター" />
  <string name="FSGW" value="ゲートウェイ" />
  <string name="RegisterDateFormat">[REG_DATE]（[AGE]）</string>
  <string name="name_text_args">[NAME]</string>
  <string name="display_name_text_args">[DISPLAY_NAME]</string>
  <string name="AcctTypeResident" value="住民" />
  <string name="AcctTypeTrial" value="トライアル" />
  <string name="AcctTypeCharterMember" value="チャーターメンバー" />
  <string name="AcctTypeEmployee" value="Linden Lab従業員" />
  <string name="PaymentInfoUsed" value="使用中の支払い情報" />
  <string name="PaymentInfoOnFile" value="ファイル上に支払い情報あり" />
  <string name="NoPaymentInfoOnFile" value="ファイル上に支払い情報なし" />
  <string name="AgeVerified" value="年齢確認あり" />
  <string name="NotAgeVerified" value="年齢確認なし" />
  <string name="partner_edit_link_url">https://secondlife.com/my/partners.php?lang=ja-JP</string>
  <string name="my_account_link_url">https://secondlife.com/my/?lang=ja-JP</string>
  <string name="no_partner_text" value="なし" />
  <accordion name="profile_accordion">
    <accordion_tab name="second_life_tab" title="Second Life">
      <scroll_container name="sl_profile_scroll">
        <panel name="sl_data_panel">
          <text name="display_name_label" value="表示名：" />
          <text name="solo_username_label" value="ユーザ名：" />
          <button name="set_name" tool_tip="表示名をセット" />
          <text name="solo_user_name" value="ハミルトン・ヒッチングス" />
          <text name="user_name" value="ハミルトン・ヒッチングス" />
          <text name="user_name_small" />
          <text name="user_label" value="ユーザ名：" />
          <text name="user_slid" value="hamilton.linden" />
          <panel name="sl_image_panel">
            <texture_picker name="2nd_life_pic" />
            <icon name="2nd_life_edit_icon" label="" tool_tip="クリックで画像を選択してください。" />
          </panel>
          <text_editor name="sl_description_edit" />
          <check_box label="検索結果に自分を表示する" name="show_in_search_checkbox" />
          <text name="title_acc_status_text" value="自分のアカウント" />
          <text_editor name="acc_status_text" value="住民。ファイルに支払い情報がありません。" />
          <text name="my_account_link" value="[[URL] ダッシュボードに移動]" />
          <text name="title_partner_text" value="パートナー：" />
          <panel name="partner_data_panel">
            <text initial_value="（取得しています）" name="partner_text" />
          </panel>
          <text name="partner_edit_link" value="[[URL] 編集]" />
        </panel>
      </scroll_container>
    </accordion_tab>
    <accordion_tab name="real_world_tab" title="リアルワールド（現実世界）">
      <scroll_container name="profile_rl_scroll">
        <panel name="rl_data_panel">
          <panel name="first_life_image_panel">
            <texture_picker name="real_world_pic" />
            <icon name="real_world_edit_icon" tool_tip="画像を選択してください。" />
          </panel>
          <text_editor name="fl_description_edit" />
          <text name="title_homepage_text">ホームページ：</text>
          <line_editor value="https://" name="homepage_edit" />
        </panel>
      </scroll_container>
    </accordion_tab>
  </accordion>

  <panel name="profile_me_buttons_panel">
    <layout_stack name="bottom_panel_ls">
      <layout_panel name="save_changes_btn_lp">
        <button label="変更を保存" name="save_btn" />
      </layout_panel>
      <layout_panel name="show_on_map_btn_lp">
        <button label="キャンセル" name="cancel_btn" />
      </layout_panel>
    </layout_stack>
  </panel>
</panel>