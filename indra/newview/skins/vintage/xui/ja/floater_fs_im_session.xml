<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="panel_im">
  <floater.string name="participant_added" value="[NAME] was invited to the conversation." />
  <floater.string name="multiple_participants_added" value="[NAME] were invited to the conversation." />

  <layout_stack name="ls_control_panel">
    <layout_panel name="slide_panel">
      <button name="slide_left_btn" />
      <button name="slide_right_btn" />
    </layout_panel>

    <layout_panel name="gprofile_panel">
      <button name="group_info_btn" tool_tip="Show this group's profile" />
    </layout_panel>

    <layout_panel name="profile_panel">
      <button name="view_profile_btn" tool_tip="Show this resident's profile" />
    </layout_panel>

    <layout_panel name="friend_panel">
      <button tool_tip="Add this resident as a friend" name="add_friend_btn" />
    </layout_panel>

    <layout_panel name="tp_panel">
      <menu_button name="teleport_btn" tool_tip="Offer or request a teleport" />
    </layout_panel>

    <layout_panel name="share_panel">
      <button tool_tip="Send an item to this resident" name="share_btn" />
    </layout_panel>

    <layout_panel name="pay_panel">
      <button tool_tip="Send money to this resident" name="pay_btn" />
    </layout_panel>

    <layout_panel name="call_btn_panel">
      <button tool_tip="Add a voice to this chat" name="call_btn" />
    </layout_panel>

    <layout_panel name="end_call_btn_panel">
      <button tool_tip="End Voice Call" name="end_call_btn" />
    </layout_panel>

    <layout_panel name="voice_ctrls_btn_panel">
      <button tool_tip="Voice Properties" name="voice_ctrls_btn" />
    </layout_panel>

    <layout_panel name="im_history_btn_panel">
      <button tool_tip="Open this conversation's past transcripts." image_overlay="Chat_History" name="im_history_btn" />
    </layout_panel>

    <layout_panel name="add_participant_panel">
      <button tool_tip="Add someone to this conversation" name="add_participant_btn" />
    </layout_panel>

    <layout_panel name="send_sysinfo_btn_panel">
      <button tool_tip="Send system info" name="send_sysinfo_btn" />
    </layout_panel>

    <layout_panel name="lp_options_btn">
      <menu_button tool_tip="Chat Options" name="chat_options_btn" />
    </layout_panel>
    <layout_panel name="lp_chat_search_btn">
      <button name="chat_search_btn" tool_tip="Search chat" />
    </layout_panel>

    <!-- Checkbox for FS prefix on support groups -->
    <layout_panel name="support_panel">
      <check_box label="Specify version" name="FSSupportGroupChatPrefix_toggle" tool_tip="Adds your current viewer version and skin information to the front of messages sent by you to this group which will assist support staff in correctly diagnosing your issues and improve accuracy in answering your questions" />
    </layout_panel>
    <layout_panel name="testing_panel">
      <check_box label="Specify build" name="FSSupportGroupChatPrefixTesting_toggle" tool_tip="Adds your current viewer build and skin information to the front of messages sent by you to this group which will assist support staff in correctly diagnosing your issues and improve accuracy in answering your questions. (This is seperate from the support groups)" />
    </layout_panel>
    <!-- END: FS Prefix -->
  </layout_stack>

  <layout_stack name="chat_stack">
    <layout_panel name="im_control_panel_holder">
      <panel name="panel_im_control_panel" />
    </layout_panel>
    <layout_panel name="panel_im_control_lp">
      <layout_stack name="im_panels">
        <layout_panel name="chat_holder">
          <fs_chat_history name="chat_history" />
        </layout_panel>
        <layout_panel name="unread_messages_holder">
          <view_border name="unread_messages_background" />
          <text name="unread_messages_text">Unread Messages: [NUM]</text>
        </layout_panel>
        <layout_panel name="chat_layout_panel">
          <layout_stack name="input_panels">
            <layout_panel name="input_editor_layout_panel">
              <chat_editor name="chat_editor" />
            </layout_panel>
            <layout_panel name="input_button_layout_panel">
              <button name="send_chat" label="Send" tool_tip="Sends the IM" />
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
  </layout_stack>
</floater>