<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_pick_info">
  <panel.string name="location_notice">(will update after save)</panel.string>
  <!-- main stack -->
  <layout_stack name="main_pick_stack">
    <!-- main panel -->
    <layout_panel name="main_pick_lp">
      <!-- snapshot stack -->
      <layout_stack name="pick_snapshot_stack">
        <layout_panel name="pick_snapshot_resizer_left" />

        <!-- snapshot panel -->
        <layout_panel name="pick_snapshot_center_panel">
          <texture_picker name="pick_snapshot" />
        </layout_panel>
        <!-- snapshot panel -->

        <layout_panel name="pick_snapshot_resizer_right" />
      </layout_stack>

      <!-- snapshot stack -->
      <line_editor name="pick_name" />
      <text_editor name="pick_desc" />
      <line_editor name="pick_location">Loading...</line_editor>

      <!-- actions stack -->
      <layout_stack name="actions_stack">
        <layout_panel name="util_resizer_left" />

        <layout_panel name="map_btn_lp">
          <button name="show_on_map_btn" label="Show on Map" />
        </layout_panel>

        <layout_panel name="tp_btn_lp">
          <button name="teleport_btn" label="Teleport" />
        </layout_panel>

        <layout_panel name="set_to_curr_location_btn_lp">
          <button name="set_to_curr_location_btn" label="Set Location" tool_tip="Set to Current Location" />
        </layout_panel>

        <layout_panel name="util_resizer_right" />
      </layout_stack>
      <!-- actions stack -->
    </layout_panel>
    <!-- main panel -->

    <!-- save changes hiding panel -->
    <layout_panel name="save_changes_lp">
      <view_border name="save_emphasis_border" />
      <!-- save changes stack -->
      <layout_stack name="save_changes_stack">
        <layout_panel name="save_resizer_left" />

        <layout_panel name="create_btn_lp">
          <button name="create_changes_btn" label="Create Pick" />
        </layout_panel>

        <layout_panel name="save_btn_lp">
          <button name="save_changes_btn" label="Save Pick" />
        </layout_panel>

        <layout_panel name="cancel_btn_lp">
          <button name="cancel_changes_btn" label="Cancel" />
        </layout_panel>

        <layout_panel name="save_resizer_right" />
      </layout_stack>
      <!-- save changes stack -->
    </layout_panel>
    <!-- save changes hiding panel -->
  </layout_stack>
  <!-- main stack -->
</panel>