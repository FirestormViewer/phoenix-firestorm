<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_radar" width="327" height="333">
  <string name="FlagsColumnType" value="icon" />
  <string name="FlagsColumnValue_0" value="" />
  <string name="FlagsColumnValue_1" value="Payment_Info_Filled" />
  <string name="FlagsColumnValue_2" value="Payment_Info_Used" />
  <string name="NotesColumnIcon" value="radarbox_n" />
  <string name="SittingColumnIcon" value="radarbox_s" />
  <string name="TypingColumnIcon" value="radarbox_t" />
  <string name="MiniMapToolTipMsg" value="[REGION] (Double-click to open Map, shift-drag to pan)" />
  <string name="AltMiniMapToolTipMsg" value="[REGION] (Double-click to teleport, shift-drag to pan)" />
  <string name="avatar_name_count" value="Name [[TOTAL]/[IN_REGION]/[IN_CHAT_RANGE]]" />
  <panel name="nearby_panel">
    <layout_stack name="radar_ls">
      <layout_panel name="minimaplayout">
        <net_map name="Net Map" />
      </layout_panel>

      <layout_panel name="radarlayout">
        <radar_list name="radar_list">
          <radar_list.columns label="Name" name="name" tool_tip="[TOTAL] avatars, [IN_REGION] in the same region, [IN_CHAT_RANGE] in chat range" />
          <radar_list.columns label="" name="voice_level" tool_tip="Is talking on voice" />
          <radar_list.columns label="Distance" name="range" />
          <radar_list.columns label="Time" name="seen" sort_column="seen_sort" />
          <radar_list.columns label="Age" name="age" />
          <radar_list.columns label="" name="in_region" tool_tip="Is in the same region (green) or on the same parcel (green/yellow)" />
          <radar_list.columns label="" name="typing_status" tool_tip="Is typing" />
          <radar_list.columns label="" name="sitting_status" tool_tip="Is sitting" />
          <radar_list.columns label="" name="flags" tool_tip="Payment info status" />
          <radar_list.columns label="" name="has_notes" tool_tip="Avatar has notes" />
          <radar_list.columns name="seen_sort" />
        </radar_list>
      </layout_panel>
    </layout_stack>

    <!-- Keep these controls so the code doesn't complain about them being missing -Zi -->
    <panel name="hide_controls">
      <panel name="bottom_panel_nearby">
        <filter_editor name="nearby_filter_input" />
        <menu_button name="nearby_view_sort_btn" />
        <button name="gear_btn" />
        <menu_button name="options_btn" />
        <button name="add_friend_btn" />
        <slider name="NearMeRange" />
      </panel>
    </panel>
  </panel>
</panel>