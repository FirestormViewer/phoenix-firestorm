<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="Post-Process Floater" title="後期處理設定">
	<tab_container name="Post-Process Tabs">
		<panel label="色彩過濾" name="wmiColorFilterPanel">
			<check_box label="開啟" name="wmiColorFilterToggle" />
			<text name="wmiColorFilterBrightnessText">
				亮度
			</text>
			<text name="wmiColorFilterSaturationText">
				飽和度
			</text>
			<text name="wmiColorFilterContrastText">
				對比度
			</text>
			<text name="wmiColorFilterBaseText">
				對比度基色
			</text>
		</panel>
		<panel label="夜視" name="wmiNightVisionPanel">
			<check_box label="開啟" name="wmiNightVisionToggle" />
			<text name="wmiNightVisionBrightMultText">
				亮度增強倍數
			</text>
			<text name="wmiNightVisionNoiseSizeText">
				噪點大小
			</text>
			<text name="wmiNightVisionNoiseStrengthText">
				噪點強度
			</text>
		</panel>
		<panel label="泛光" name="wmiBloomPanel">
			<check_box label="開啟" name="wmiBloomToggle" />
			<text name="wmiBloomExtractText">
				亮度提取
			</text>
			<text name="wmiBloomSizeText">
				泛光大小
			</text>
			<text name="wmiBloomStrengthText">
				泛光強度
			</text>
		</panel>
		<panel label="擴充" name="Extras">
			<button label="載入效果" label_selected="載入效果" name="PPLoadEffect" />
			<button label="儲存效果" label_selected="儲存效果" name="PPSaveEffect" />
			<line_editor label="效果名稱" name="PPEffectNameEditor" />
		</panel>
	</tab_container>
</floater>