<?xml version="1.0" encoding="utf-8"?>
<panel name="panel_flickr_photo">
	<combo_box name="resolution_combobox" tool_tip="圖像解析度">
		<combo_box.item label="當前視窗" name="CurrentWindow" />
		<combo_box.item label="自訂" name="Custom" />
	</combo_box>
	<combo_box name="filters_combobox" tool_tip="圖像濾鏡">
		<combo_box.item label="不用濾鏡" name="NoFilter" />
	</combo_box>
	<check_box label="保持縱橫比" name="keep_aspect_ratio" />
	<text name="working_lbl">
		更新...
	</text>
	<panel name="options_panel">
		<check_box label="顯示捕捉框架" tool_tip="在螢幕上顯示一個框架，圍繞快照區域。場景中超出快照範圍的部分將被去飽和並稍微模糊。" name="show_frame"/>
		<check_box label="顯示構圖指南" tool_tip="在快照框架內顯示構圖指南（九宮格規則）" name="show_guides"/>
	</panel>
	<button label="更新" name="new_snapshot_btn" tool_tip="點擊即可更新" />
	<button label="預覽" name="big_preview_btn" tool_tip="點擊即可切換預覽" />
	<text name="title_label">
		標題：
	</text>
	<text name="description_label">
		描述：
	</text>
	<check_box initial_value="true" label="在描述結尾加上第二人生的地點" name="add_location_cb" />
	<text name="tags_label" tool_tip="不同標籤之間以半形空格, 標籤若含空格，用 &quot;&quot; 半形符號括住">
		標籤：
	</text>
	<combo_box name="rating_combobox" tool_tip="Flickr 內容分級">
		<combo_box.item label="安全級 Flickr 內容" name="SafeRating" />
		<combo_box.item label="適中階 Flickr 內容" name="ModerateRating" />
		<combo_box.item label="限制級 Flickr 內容" name="RestrictedRating" />
	</combo_box>
	<button label="分享" name="post_photo_btn" />
	<button label="取消" name="cancel_photo_btn" />
</panel>