<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="470"
 label="Профиль"
 layout="topleft"
 left="0"
 name="panel_profile"
 top="0"
 width="430">
    <string
     name="payment_update_link_url">
        http://www.secondlife.com/account/billing.php?lang=en
    </string>
    <string
     name="partner_edit_link_url">
        http://www.secondlife.com/account/partners.php?lang=en
    </string>
    <string
     name="my_account_link_url"
     value="http://secondlife.com/account" />
    <string
     name="no_partner_text"
     value="None" />
    <string
     name="no_group_text"
     value="None" />
    <string
     name="RegisterDateFormat">
[REG_DATE]
([AGE])
    </string>
  <string
  name="name_text_args">
    [NAME]
  </string>
  <string
    name="display_name_text_args">
    [DISPLAY_NAME]
  </string>


          <panel
           layout="topleft"
           follows="left|top|right|bottom"
           height="450"
           name="second_life_panel"
           top="0"
           left="0"
           width="430">

<!--

KC: I used view_border's around text_editor's due to text render issues with border_visible

-->

            <text
             top_pad="8"
             follows="left|top"
             halign="right"
             height="16"
             left="6"
             name="Name:"
             width="40"
             value="Имя:" />

            <view_border
             left_pad="4"
             height="16"
             right="-86"
             bevel_style="in"
             follows="left|top|right"
             name="info_border" />
            <text_editor
             left_delta="3"
             bottom_delta="2"
             height="16"
             right="-86"
             h_pad="0"
             v_pad="0"
             allow_scroll="false"
             bg_visible="false"
             enabled="false"
             follows="left|top|right"
             max_length="254"
             name="complete_name"
             value="(загрузка...)" />

            <button
             name="copy_to_clipboard"
             layout="topleft"
             follows="top|right"
             image_overlay="Копировать"
             top_delta="-5"
             left_pad="4"
             height="21"
             width="21"
             tab_stop="false"
             tool_tip="Копировать в буфер обмена"/>

            <text
             follows="top|right"
             halign="center"
             height="13"
             top_pad="-15"
             left_pad="2"
             right="-6"
             layout="topleft"
             name="status"
             text_color="LtGray_50"
             value="Online" />

            <text
             top_pad="2"
             follows="left|top"
             halign="right"
             height="16"
             left="6"
             name="Key:"
             width="40"
             value="Ключ:" />

            <view_border
             left_pad="4"
             height="16"
             right="-86"
             bevel_style="in"
             follows="left|top|right"
             name="info_border" />
            <text_editor
             left_delta="3"
             bottom_delta="2"
             height="16"
             right="-86"
             h_pad="0"
             v_pad="0"
             allow_scroll="false"
             bg_visible="false"
             enabled="false"
             follows="left|top|right"
             max_length="254"
             name="user_key"
             value="(загрузка...)" />

            <button
             name="copy_uri"
             left_pad="4"
             right="-6"
             bottom_delta="2"
             height="20"
             label="Копировать URI"
             enabled="false"
             follows="top|right" />

            <texture_picker
             left="6"
             top_pad="3"
             height="180"
             width="220"
             allow_no_texture="true"
             default_image_name="None"
             enabled="false"
             fallback_image="Generic_Person_Large"
             follows="top|left"
             name="2nd_life_pic" />

            <text
             top_pad="-179"
             left_pad="4"
             follows="left|top|right"
             halign="left"
             height="16"
             name="label"
             right="-6"
             value="Рожден:" />

            <view_border
             top_pad="0"
             left_delta="0"
             height="32"
             right="-6"
             bevel_style="in"
             follows="left|top|right"
             name="info_border" />
            <text
             top_delta="2"
             left_delta="2"
             height="28"
             right="-6"
             enabled="true"
             follows="left|top|right"
             max_length="254"
             name="register_date" />

            <text
             top_pad="7"
             follows="left|top|right"
             halign="left"
             height="16"
             left_delta="-2"
             name="label2"
             right="-6"
             value="Аккаунт:" />

            <view_border
             top_pad="0"
             left_delta="0"
             bevel_style="in"
             follows="left|top|right"
             height="48"
             right="-6"
             name="acct_border" />
            <text_editor
             top_delta="2"
             left_delta="2"
             height="44"
             right="-6"
             allow_scroll="false"
             bg_visible="false"
             follows="left|top|right"
             h_pad="2"
             v_pad="0"
             layout="topleft"
             name="acc_status_text"
             read_only="true"
             translate="false"
             word_wrap="true"/>

            <text
             top_pad="7"
             left_delta="-2"
             height="16"
             right="-6"
             follows="left|top|right"
             halign="left"
             name="partner_label"
             value="Партнер:" />

            <view_border
             top_pad="0"
             left_delta="0"
             height="18"
             right="-6"
             bevel_style="in"
             follows="left|top|right"
             name="info_border" />
            <text
             top_delta="2"
             left_delta="2"
             height="16"
             right="-6"
             border_visible="true"
             enabled="true"
             follows="left|top|right"
             max_length="254"
             name="partner_text" />

            <!--<button follows="left|top" left="15"  top="75" height="20" halign="center"
            label="&lt; &lt;" label_selected="&gt; &gt;" name="bigimg" tool_tip="Open Full Size." width="40" />-->

            <text
             left="6"
             top_pad="8"
             follows="left|top"
             halign="right"
             height="16"
             name="Groups:"
             width="45"
             value="Группы:" />

            <group_list
            left_pad="8"
            top_delta="0"
            height="80"
            right="-6"
            border_visible="true"
            for_agent="false"
            follows="left|top|right"
            name="group_list" />

            <!--<button follows="left|top" left="15"  top="240" height="20" halign="center"
            label="+" label_selected="+" name="PhoenixGroupInvite_Button" tool_tip="Invite to Group." width="40" />-->

            <text
             left="6"
             top_pad="8"
             height="16"
             width="45"
             follows="left|top"
             halign="right"
             name="About:"
             value="Про:" />

            <view_border
             left_pad="6"
             top_delta="0"
             height="90"
             right="-6"
             bevel_style="in"
             follows="all"
             name="info_border" />
            <text_editor
             left_delta="1"
             top_delta="1"
             height="88"
             right="-7"
             read_only="true"
             enabled="false"
             follows="all"
             max_length="512"
             name="sl_description_edit"
             h_pad="2"
             word_wrap="true"
             parse_urls="true" />

            <layout_stack
             top_pad="8"
             left="6"
             right="-6"
             orientation="horizontal"
             follows="left|bottom|right"
             height="44">

            <layout_panel
			 name="left_buttonstack"
             left="2"
             right="-2"
             height="42"
             user_resize="false"
             follows="all"
             layout="topleft">

            <button
             top="2"
             left="2"
             height="20"
             halign="center"
             label="Найти на карте"
             label_selected="Find on Map"
             name="show_on_map_btn"
			 tool_tip="Найдите пользователя на карте"
             follows="left|top|right" />

            <button
             top_pad="2"
             height="20"
             halign="center"
             label="Заплатить"
             label_selected="Заплатить"
             name="pay"
             tool_tip="Заплатить денег или поделиться инвентарем с пользователем"
             follows="left|top|right" />

            </layout_panel>
            <layout_panel
			 name="middle_buttonstack"
             left="2"
             right="-2"
             user_resize="false"
             follows="all"
             layout="topleft">

            <button
             top="2"
             left="2"
             height="20"
             halign="center"
             label="Отправить телепорт"
             label_selected="Отправить телепорт"
             name="teleport"
			 tool_tip="Отправить телепорт пользователю"
             follows="left|top|right" />

            <button
             top_pad="2"
             height="20"
             halign="center"
             label="Личное сообщение"
             label_selected="Личное сообщение"
             name="im"
             tool_tip="Открыть сессию личных сообщений с пользователем (ИМ)"
             follows="left|top|right" />

            </layout_panel>
            <layout_panel
			 name="right_buttonstack"
             left="2"
             right="-2"
             user_resize="false"
             follows="all"
             layout="topleft">

            <button
             top="2"
             left="2"
             height="20"
             halign="center"
             label="Добавить друга"
             label_selected="Add Friend"
             name="add_friend"
             tool_tip="Отправить запрос дружбы пользователю"
             follows="left|top|right" />

            <button
             top_pad="2"
             height="20"
             right="-40"
             label="Блокировать"
             layout="topleft"
             name="block"
             tool_tip="Заблокировать пользователя"
             use_ellipses="true"
             commit_callback.function="Profile.BlockUnblock"
             enabled_callback.function="Profile.EnableBlock"
             follows="left|top|right" />

            <button
             top_delta="0"
             height="20"
             right="-40"
             label="Разблокировать"
             layout="topleft"
             name="unblock"
             tool_tip="Разблокировать пользователя"
             use_ellipses="true"
             commit_callback.function="Profile.BlockUnblock"
             enabled_callback.function="Profile.EnableUnblock"
             follows="left|top|right" />

            <menu_button
             left_pad="4"
             height="20"
             image_overlay="OptionsMenu_Off"
             layout="topleft"
             name="overflow_btn"
             width="36"
             follows="top|right" />

            </layout_panel>
            </layout_stack>

          </panel>
</panel>

