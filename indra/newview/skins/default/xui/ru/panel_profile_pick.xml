<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_pick_info">
	<panel.string name="location_notice">
		(будет обновлено после сохранения)
	</panel.string>
	<layout_stack name="main_pick_stack">
		<layout_panel name="main_pick_lp">
			<text name="title_label">Название:</text>
			<text name="description_label">Описание:</text>
			<button name="btn_preview" tool_tip="Переключить предварительный просмотр 'Описание' вашей Подборки"/>
			<text name="location_label">Локация:</text>
			<line_editor name="pick_location">Загрузка...</line_editor>
		</layout_panel>
		<layout_panel name="util_buttons_lp">
			<layout_stack name="util_buttons_stack">
				<layout_panel name="map_btn_lp">
					<button name="show_on_map_btn" label="На карте"/>
				</layout_panel>
				<layout_panel name="tp_btn_lp">
					<button name="teleport_btn" label="Телепорт"/>
				</layout_panel>
				<layout_panel name="set_to_curr_location_btn_lp">
					<button name="set_to_curr_location_btn" label="Установить" tool_tip="Установить в текущуюу локацию"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel name="save_changes_lp">
			<layout_stack name="save_changes_stack">
				<layout_panel name="create_btn_lp">
					<button name="create_changes_btn" label="Создать Подборку"/>
				</layout_panel>
				<layout_panel name="save_btn_lp">
					<button name="save_changes_btn" label="Сохранить Подборку"/>
				</layout_panel>
				<layout_panel name="cancel_btn_lp">
					<button name="cancel_changes_btn" label="Отмена"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</panel>
