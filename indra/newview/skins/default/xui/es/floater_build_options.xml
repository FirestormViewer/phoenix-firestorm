     top_pad="5"
     width="200" />
   <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left="10"
         tool_tip="Opacidad de la rejilla"
         name="grid_opacity_label"
         top_pad="5"
         width="128">
            Opacidad de la rejilla:
   </text>
