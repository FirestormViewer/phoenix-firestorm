<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Terreno en venta" name="panel_ls_land">
	<panel name="panel_ls_input">
		<text name="search_text">
			Términos de búsqueda:
		</text>
		<combo_box name="land_category">
			<combo_box.item label="Todo" name="All"/>
			<combo_box.item label="Subasta" name="Auction"/>
			<combo_box.item label="Ventas en continente" name="Mainland"/>
			<combo_box.item label="Ventas en estado" name="Estate"/>
		</combo_box>
		<check_box label="Precio &lt;" name="price_check" width="45"/>
		<check_box label="Área &gt;" name="area_check"/>
		<text name="sort_text" left="355">
			Ordenar por:
		</text>
		<combo_box name="land_sort_combo">
			<combo_box.item label="Nombre" name="Name_item"/>
			<combo_box.item label="Precio" name="Price_item"/>
			<combo_box.item label="Precio/m2" name="PPM_item"/>
			<combo_box.item label="Área" name="Area_item"/>
		</combo_box>
		<check_box label="Ordenar todo ascendentemente" name="ascending_check"/>
		<button label="Buscar" name="land_find" width="90" left="688"/>
	</panel>
	<panel name="panel_ls_scrolllist">
		<scroll_list name="search_results_land">
			<columns label="Nombre" name="land_name"/>
			<columns label="Precio" name="price"/>
			<columns label="Área" name="area"/>
			<columns label="L$/m2" name="ppm"/>
			<columns label="Tipo" name="land_type"/>
		</scroll_list>
		<button label="Anterior" name="land_back"/>
		<button label="Siguiente" name="land_next"/>
	</panel>
</panel>
