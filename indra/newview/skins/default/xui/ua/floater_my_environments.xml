<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater label="Місця" name="my_environments" title="МОЕ НАВКОЛИШНЕ СЕРЕДОВИЩЕ">
	<layout_stack name="main_layout">
		<layout_panel label="Фільтри" name="filter_panel">
			<check_box label="Дни" name="chk_days"/>
			<check_box label="Небеса" name="chk_skies"/>
			<check_box label="Вода" name="chk_water"/>
			<filter_editor label="Фільтр навколишнього середовища" name="flt_search"/>
		</layout_panel>
		<layout_panel label="Довкілля" name="list_panel">
			<panel label="pnl_inv_wrap" name="pnl_inv_wrap"/>
		</layout_panel>
		<layout_panel name="lp_showfolders">
			<check_box initial_value="false" label="Показати всі папки" name="chk_showfolders"/>
		</layout_panel>
		<layout_panel name="pnl_control">
			<panel label="bottom_panel" name="pnl_bottom">
				<menu_button name="btn_gear" tool_tip="Додаткові параметри"/>
				<menu_button name="btn_newsettings" tool_tip="Створити нове налаштування"/>
				<button name="btn_del" tool_tip="Видалити вибрану річ"/>
			</panel>
		</layout_panel>
	</layout_stack>
</floater>
