<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_pick_info">
	<panel.string name="location_notice">
		(буде оновлено після збереження)
	</panel.string>
	<layout_stack name="main_pick_stack">
		<layout_panel name="main_pick_lp">
			<text name="title_label">Назва:</text>
			<text name="description_label">Опис:</text>
			<text name="location_label">Локація:</text>
			<line_editor name="pick_location">Завантаження...</line_editor>
		</layout_panel>
		<layout_panel name="actions_lp">
			<layout_stack name="actions_stack">
				<layout_panel name="map_btn_lp">
					<button name="show_on_map_btn" label="На мапі"/>
				</layout_panel>
				<layout_panel name="tp_btn_lp">
					<button name="teleport_btn" label="Телепорт"/>
				</layout_panel>
				<layout_panel name="set_to_curr_location_btn_lp">
					<button name="set_to_curr_location_btn" label="Встановити" tool_tip="Встановити в поточну локацію"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel name="save_changes_lp">
			<layout_stack name="save_changes_stack">
				<layout_panel name="create_btn_lp">
					<button name="create_changes_btn" label="Створити Підбірку"/>
				</layout_panel>
				<layout_panel name="save_btn_lp">
					<button name="save_changes_btn" label="Зберегти Підбірку"/>
				</layout_panel>
				<layout_panel name="cancel_btn_lp">
					<button name="cancel_changes_btn" label="Скасування"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</panel>
