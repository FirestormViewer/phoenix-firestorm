<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Речі" name="objects panel">
	<panel name="sidepanel_inventory_panel">
		<layout_stack name="inventory_layout_stack">
			<layout_panel name="inbox_layout_panel">
				<panel name="marketplace_inbox">
					<string name="InboxLabelWithArg">
						Отримані речі ([NUM])
					</string>
					<string name="InboxLabelNoArg">
						Отримані речі
					</string>
					<button label="Отримані речі" name="inbox_btn"/>
					<button name="reload_received_items_btn" tool_tip="Перезавантажити список отриманих предметів."/>
					<text name="inbox_fresh_new_count">
						Нових: [NUM]
					</text>
					<panel name="inbox_inventory_placeholder_panel" tool_tip="Перетягніть речі у ваш інвентар для їх використання">
						<text name="inbox_inventory_placeholder">
							Покупки із Marketplace будуть доставлені сюди.
						</text>
					</panel>
				</panel>
			</layout_panel>
		</layout_stack>
		<panel name="button_panel">
			<layout_stack name="button_panel_ls">
				<layout_panel name="info_btn_lp">
					<button label="Профіль" name="info_btn" tool_tip="Показати профіль об'єкта"/>
				</layout_panel>
				<layout_panel name="share_btn_lp">
					<button label="Поділитися" name="share_btn" tool_tip="Поділитися об'єктом з інвентаря"/>
				</layout_panel>
				<layout_panel name="shop_btn_lp">
					<button label="Купити" name="shop_btn" tool_tip="Відкрити сторінку Marketplace"/>
					<button label="Вдягти" name="wear_btn" tool_tip="Вдягти вибраний комплект"/>
					<button label="Програти" name="play_btn"/>
					<button label="Телепортація" name="teleport_btn" tool_tip="Телепортуватися у вибрану область"/>
				</layout_panel>
			</layout_stack>
		</panel>
	</panel>
</panel>
