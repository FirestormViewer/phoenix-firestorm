<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<floater name="experience_profile" title="Профіль Пригоди">
  <floater.string name="empty_slurl">
    (ні)
  </floater.string>
  <text name="edit_title" value="Профіль Пригоди"/>
  <tab_container name="tab_container">
    <panel name="panel_experience_info">
      <scroll_container name="xp_scroll">
        <panel name="scrolling_panel">
          <layout_stack name="ls1">
            <layout_panel name="top panel">
              <button label="Змінити" name="edit_btn"/>
            </layout_panel>

            <layout_panel name="maturity panel">
              <text name="ContentRating" width="75">
                Рейтинг:
              </text>
            </layout_panel>

            <layout_panel name="location panel">
              <text name="Location">
                Місце:
              </text>
            </layout_panel>

            <layout_panel name="marketplace panel">
              <text name="Marketplace">
                Торговий центр:
              </text>

            </layout_panel>
            <layout_panel name="owner panel">
              <text name="Owner">
                Власник:
              </text>
            </layout_panel>

            <layout_panel name="group_panel">
              <text name="Group">
                Група:
              </text>
            </layout_panel>

            <layout_panel name="perm panel">
              <button label="Дозволити" name="allow_btn"/>
              <button label="Забути" name="forget_btn" />
              <button label="Заблокувати" name="block_btn"  width="95"/>
              <text name="privileged">
                Ця пригода увімкнена для всіх мешканців.
              </text>
              <button label="Поскаржитися" name="report_btn"/>
            </layout_panel>
          </layout_stack>
        </panel>
      </scroll_container>
    </panel>

    <panel name="edit_panel_experience_info">
      <scroll_container name="edit_xp_scroll">
        <panel name="edit_scrolling_panel">
          <text name="edit_experience_title_label" value="Назва:"/>
          <text name="edit_experience_desc_label" value="Опис:"/>
          <button name="Group_btn" label="Група"/>
          <text name="edit_ContentRating">
            Рейтинг:
          </text>
          <icons_combo_box label="Помірний"
            tool_tip="При підвищенні рейтингу зрілості для пригод скидається дозвіл для всіх мешканців, які дозволили пригоду."
            name="edit_ContentRatingText">
            <icons_combo_box.item label="Дорослий" name="Adult"/>
            <icons_combo_box.item label="Помірний" name="Mature"/>
            <icons_combo_box.item label="Загальний" name="PG"/>
          </icons_combo_box>
          <text name="edit_Location">
            місце:
          </text>
          <button name="location_btn" label="Встановити поточний"/>
          <button name="clear_btn" label="Очистити місце"/>
          <text name="edit_marketplace">
            Торговий центр:
          </text>
          <check_box label="Увімкнути Пригоду" name="edit_enable_btn"/>
          <check_box label="Сховати у пошуках" name="edit_private_btn"/>
          <text name="changes" value="Відображення змін пригоди в усіх регіонах може тривати кілька хвилин."/>
          <button label="Назад" name="cancel_btn"/>
          <button label="Зберегти" name="save_btn"/>
        </panel>
      </scroll_container>
    </panel>
  </tab_container>
</floater>