<?xml version="1.0" encoding="utf-8"?>
<panel label="Резервна копія" name="backup">
	<text name="backup_path_label" width="180">
		Шлях резервного копіювання:
	</text>
	<button label="Задати" name="set_backup_settings_path" />
	<layout_stack name="ls_account_specific_label">
		<layout_panel name="lp_account_specific_label">
			<text name="account_specific_label">
				В даний час ви не увійшли. Пам'ятайте, що деякі налаштування вашого облікового запису можуть бути збережені і відновлені тільки коли ви увійшли до системи. Тим не менш, створити резервну копію настрою, які застосовуються до всіх облікових записів можна без заходу в систему.
			</text>
		</layout_panel>
		<layout_panel name="lp_buttons">
			<text name="settings_restored_label">
				Групи налаштувань, які зберігатимуться:
			</text>
			<layout_stack name="ls_list_view_stack">
				<layout_panel name="lp_restore_global_files">
					<scroll_list name="restore_global_files_list">
						<column label="Загальні файли:" name="restore_global_files_label" />
						<column label="Значення" name="value" />
						<row name="restore_global_row_login">
							<column name="restore_global_files_label">Дані входу</column>
						</row>
						<row name="restore_global_row_colors">
							<column name="restore_global_files_label">Цвета</column>
						</row>
						<row name="restore_global_row_dialogs">
							<column name="restore_global_files_label">Ігноровані діалоги</column>
						</row>
						<row name="restore_global_row_grids">
							<column name="restore_global_files_label">Сітки користувача</column>
						</row>
						<row name="restore_global_row_autoreplace">
							<column name="restore_global_files_label">Автозаміна</column>
						</row>
						<row name="restore_global_row_quickprefs">
							<column name="restore_global_files_label">Швидкі налаштування</column>
						</row>
						<row name="restore_global_row_favorites">
							<column name="restore_global_files_label">Вибране</column>
						</row>
						<row name="restore_global_row_controls">
							<column name="restore_global_files_label">Керувати</column>
						</row>
					</scroll_list>
				</layout_panel>
				<layout_panel name="lp_restore_per_account_files">
					<scroll_list name="restore_per_account_files_list">
						<column label="Файли облікового запису:" name="restore_per_account_files_label" />
						<column label="Значення" name="value" />
						<row name="restore_per_account_row_blacklist">
							<column name="restore_per_account_files_label">Чорний список активів</column>
						</row>
						<row name="restore_per_account_row_contactsets">
							<column name="restore_per_account_files_label">Контактні групи</column>
						</row>
						<row name="restore_per_account_row_invfilters">
							<column name="restore_per_account_files_label">Фільтри інвентарю</column>
						</row>
						<row name="restore_per_account_row_favsort">
							<column name="restore_per_account_files_label">Сортування обраних</column>
						</row>
						<row name="restore_per_account_row_medialists">
							<column name="restore_per_account_files_label">Чорний/Білий списки медіа</column>
						</row>
						<row name="restore_per_account_row_toolbars">
							<column name="restore_per_account_files_label">Панелі інструментів</column>
						</row>
						<row name="restore_per_account_row_volumes">
							<column name="restore_per_account_files_label">Гучності голосового чату</column>
						</row>
						<row name="restore_per_account_row_tphistory">
							<column name="restore_per_account_files_label">Історії телепорту</column>
						</row>
						<row name="restore_per_account_row_regiontracker">
							<column name="restore_per_account_files_label">Відстеження регіонів</column>
						</row>
						<row name="restore_per_account_row_groupmutes">
							<column name="restore_per_account_files_label">Відключені чати груп</column>
						</row>
						<row name="restore_per_account_row_avatar_render_settings">
							<column name="restore_per_account_files_label">Відображення Аватар</column>
						</row>
					</scroll_list>
				</layout_panel>
				<layout_panel name="lp_restore_folders">
					<scroll_list name="restore_global_folders_list">
						<column label="Папки:" name="restore_global_folders_label" />
						<column label="Значення" name="value" />
						<row name="restore_folders_row_beams">
							<column name="restore_global_folders_label">Промені вибору</column>
						</row>
						<row name="restore_folders_row_beamcolors">
							<column name="restore_global_folders_label">Кольори променя вибору</column>
						</row>
						<row name="restore_folders_row_spellcheck">
							<column name="restore_global_folders_label">Перевірка правопису</column>
						</row>
						<row name="restore_folders_row_windlight">
							<column name="restore_global_folders_label">Окр.середовище (Обов'язкове)</column>
						</row>
						<row name="restore_folders_row_daycycles">
							<column name="restore_global_folders_label">Середовище середовища: денний цикл</column>
						</row>
						<row name="restore_folders_row_skies">
							<column name="restore_global_folders_label">Середа: Небо</column>
						</row>
						<row name="restore_folders_row_waters">
							<column name="restore_global_folders_label">Середовий район: вода</column>
						</row>
						<row name="restore_folders_row_presets" value="presets">
							<column name="restore_global_folders_label">Попередні налаштування</column>
						</row>
					</scroll_list>
				</layout_panel>
			</layout_stack>
			<button label="Вибрати все" name="select_all_button" />
			<button label="Скасувати все" name="deselect_all_button" />
			<check_box label="Відновлення глобальних налаштувань" name="restore_global_settings_checkbox" />
			<check_box label="Відновлення настройок облікового запису" name="restore_per_account_settings_checkbox" />
			<button width="165" label="Зберегти налаштування" name="backup_settings" />
			<button width="165" label="Відновити налаштування" name="restore_settings" />
		</layout_panel>
	</layout_stack>
</panel>
