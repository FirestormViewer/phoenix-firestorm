<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_pick_info">
	<panel.string name="location_notice">
		(wird nach dem Speichern aktualisiert)
	</panel.string>
	<layout_stack name="main_pick_stack">
		<layout_panel name="main_pick_lp">
			<text name="title_label">
				Titel:
			</text>
			<text name="description_label">
				Beschreibung:
			</text>
			<button name="btn_preview" tool_tip="Vorschau der Auswahl-Beschreibung umschalten"/>
			<text name="location_label">
				Standort:
			</text>
			<line_editor name="pick_location">
				Laden...
			</line_editor>
		</layout_panel>
		<layout_panel name="util_buttons_lp">
			<layout_stack name="util_buttons_stack">
				<layout_panel name="map_btn_lp">
					<button label="Auf Karte zeigen" name="show_on_map_btn"/>
				</layout_panel>
				<layout_panel name="tp_btn_lp">
					<button label="Teleportieren" name="teleport_btn"/>
				</layout_panel>
				<layout_panel name="set_to_curr_location_btn_lp">
					<button label="Standort festl." name="set_to_curr_location_btn" tool_tip="Aktuellen Standort verwenden"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel name="save_changes_lp">
			<layout_stack name="save_changes_stack">
				<layout_panel name="create_btn_lp">
					<button name="create_changes_btn" label="Auswahl erstellen"/>
				</layout_panel>
				<layout_panel name="save_btn_lp">
					<button name="save_changes_btn" label="Auswahl speichern"/>
				</layout_panel>
				<layout_panel name="cancel_btn_lp">
					<button name="cancel_changes_btn" label="Abbrechen"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</panel>
