<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="inventory_settings" title="Inventar-Einstellungen">
	<text name="multi_folder_txt">
		Doppelklick auf Ordner in Multi-Ordner-Ansicht:
	</text>
	<radio_group name="multi_double_click_setting">
		<radio_item label="Klappt Ordner auf &amp; ein" name="0"/>
		<radio_item label="Öffnet ein neues Fenster" name="1"/>
		<radio_item label="Wechselt Ansicht" name="2"/>
	</radio_group>
	<text name="single_folder_txt">
		Doppelklick auf Ordner in Einzel-Ordner-Ansicht:
	</text>
	<radio_group name="single_double_click_setting">
		<radio_item label="Bleibt in aktuellem Fenster" name="false"/>
		<radio_item label="Öffnet ein neues Fenster" name="true"/>
	</radio_group>
	<text name="find_original_txt">
		„In Inventar anzeigen“ oder „Original öffnen“:
	</text>
	<radio_group name="find_original_settings">
		<radio_item label="In Haupt-Inventarfenster anzeigen" name="false"/>
		<radio_item label="In neuer Einzel-Ordner-Ansicht anzeigen" name="true"/>
	</radio_group>
	<text name="favorites_txt">
		Favoriten
	</text>
	<check_box label="Stern anzeigen, wenn Objekt ein Favorit ist" name="favorite_star"/>
	<check_box label="Stern an Ordner anzeigen, die Favoriten enthalten" name="favorite_hollow_star"/>
	<check_box label="Farbiger Text" name="favorites_color"/>
	<text name="attachment_return_txt">
		Drücken von Eingabetaste bei einem Avatar-Anhang
	</text>
	<combo_box name="attach_combo">
		<combo_box.item label="Fügt Anhang hinzu (empfohlen)" name="0"/>
		<combo_box.item label="Anhängen (entfernt bisherigen Anhang am entsprechenden Punkt)" name="1"/>
	</combo_box>
</floater>
