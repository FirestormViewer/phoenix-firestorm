			<panel name="layout_panel_3">
				<text name="find_on_map_label">
					Cerca sulla mappa
				</text>
			</panel>
			<panel name="layout_panel_4">
				<combo_box label="Amici" name="friend combo" tool_tip="Mostra i miei amici sulla mappa">
