			<panel name="layout_panel_1">
				<text name="events_label">
					Legenda
				</text>
			</panel>
			<panel name="layout_panel_2">
				<button name="Show My Location" tool_tip="Centra la mappa sulla mia posizione"/>
				<text name="me_label">
					Io
				</text>
				<text name="person_label">
					Avatar
				</text>
				<text name="land_sale_label">
