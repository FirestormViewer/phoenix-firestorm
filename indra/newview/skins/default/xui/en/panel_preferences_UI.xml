<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="UI-Pref"
 name="Display panel">
<tab_container
 label="Firestorm Prefs"
 layout="topleft"
 follows="all"
 top="5"
 bottom="-1"
 left="1"
 right="-1"
 name="tabs"
 tab_min_width="50"
 tab_position="top" >

    <!--3D World-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="3D World"
     name="UI Prefs Panel" >

        <text
         type="string"
         left="10"
         top_pad="8"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         name="HoverTipText"
         width="100">
            Hover Tips:
        </text>
        <check_box
         control_name="ShowHoverTips"
         height="16"
         initial_value="true"
         label="Show Hover Tips"
         layout="topleft"
         left_delta="10"
         name="ShowHoverTips"
         tool_tip="Set this to show hover tips on avatars and some other things - set this one first (CTRL+SHIFT+T)"
         top_pad="7"
         width="256" />
        <check_box
         enabled_control="ShowHoverTips"
         control_name="ShowAllObjectHoverTip"
         height="16"
         initial_value="true"
         label="on All Objects"
         tool_tip="Set this to show hover tips on in-world objects"
         layout="topleft"
         left_delta="10"
         name="ShowAllHoverTips"
         top_pad="2"
         width="256" />
        <check_box
         enabled_control="ShowHoverTips"
         control_name="ShowLandHoverTip"
         height="16"
         initial_value="true"
         label="on Land"
         tool_tip="Set this to show hover tips on land"
         layout="topleft"
         name="ShowLandHoverTips"
         top_pad="2"
         width="256" />
		<check_box
		enabled_control="ShowHoverTips"
		control_name="FSAdvancedTooltips"
		name="FSAdvancedTooltips"
		label="Show extended information in hovertips (Phoenix style)"
		layout="topleft"
		top_pad="5"
		left_delta="-10"
		height="16"
		width="350" />
        <check_box
		enabled_control="ShowHoverTips"
		control_name="FSShowGroupTitleInTooltip"
		name="FSShowGroupTitleInTooltip"
		label="Show avatar group titles in hovertips"
		layout="topleft"
		top_pad="2"
		height="16"
		width="350" />

        <text
         type="string"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         left="265"
         name="tooltip_textbox"
         top="8"
         width="200">
           Hovertip Trigger Delays:
        </text>
		
        <slider
         control_name="ToolTipDelay"
         decimal_digits="3"
         follows="left|top"
         height="16"
         increment="0.025"
         initial_value="0.7"
         label="Tooltips:"
         label_width="50"
         layout="topleft"
         max_val="6.0"
         min_val="0"
         name="ToolTipDelay_slider"
         tool_tip="Delay after that tooltips for user interface elements such as buttons are shown. (Default: 0.7)"
         top_pad="7"
         left="275"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="ToolTipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>
		
        <slider
         enabled_control="ShowHoverTips"
         control_name="AvatarInspectorTooltipDelay"
         decimal_digits="3"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="0.35"
         label="Avatars:"
         label_width="50"
         layout="topleft"
         left="275"
         max_val="6.0"
         min_val="0"
         name="AvatarInspectorTooltipDelay_slider"
         tool_tip="Delay after that hovertips for avatars are shown. (Default: 0.35)"
         top_pad="2"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="AvatarInspectorTooltipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>
		
        <slider
         enabled_control="ShowHoverTips"
         control_name="ObjectInspectorTooltipDelay"
         decimal_digits="3"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="0.35"
         label="Objects:"
         label_width="50"
         layout="topleft"
         left="275"
         max_val="6.0"
         min_val="0"
         name="ObjectInspectorTooltipDelay_slider"
         tool_tip="Delay after that hovertips for objects are shown. (Default: 0.35)"
         top_pad="2"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="ObjectInspectorTooltipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>
        <slider
         control_name="FSHudTextFadeDistance"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.25"
         label="Floating text fade distance (in m):"
         tool_tip="Sets the distance where floating text starts to fade"
         label_width="200"
         layout="topleft"
         left="10"
         min_val="0"
         max_val="64"
         name="FSHudTextFadeDistance"
         top="130"
         width="481" />
        <slider
         control_name="FSHudTextFadeRange"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.25"
         label="Floating text fade range (in m):"
         tool_tip="Sets the range it takes for a floating text to fade from fully visible to completely invisible"
         label_width="200"
         layout="topleft"
         left="10"
         min_val="0.25"
         max_val="32"
         name="FSHudTextFadeRange"
         top_pad="2"
         width="474" />
    </panel>

    <!--2D Overlay-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="2D Overlay"
     name="ui-2d-overlay" >
        <text
         type="string"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         left="10"
         name="UI Size:"
         top_pad="8"
         width="60">
            UI Scaling:
        </text>
        <slider
         control_name="UIScaleFactor"
         decimal_digits="2"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="1"
         layout="topleft"
         left_pad="0"
         max_val="2.0"
         min_val="0.75"
         name="ui_scale_slider"
         top_pad="-14"
         width="390" />

        <check_box
         control_name="FSEnableAutomaticUIScaling"
         height="16"
         label="Automatically detect UI scaling factor"
         layout="topleft"
         left="10"
         name="FSEnableAutomaticUIScaling"
         tool_tip="If enabled, the viewer will try to detect the correct factor based on the scaling set in the operating system. This feature is currently only available on Windows."
         top_pad="5"
         width="256" />

      <text
       type="string"
       left="10"
       top_pad="20"
       width="140"
       follows="left|top"
       height="16"
       layout="topleft"
       name="ScriptDialogsPerObjectLabel">
        Script Dialogs per Object:
      </text>
      <combo_box
       control_name="ScriptDialogPerObject"
       height="23"
       layout="topleft"
       left_pad="10"
       top_delta="-5"
       name="ScriptDialogPerObjectDropdown"
       width="180">
        <combo_box.item
         label="One per Object"
         name="ScriptDialogOption_0"
         value="0"/>
        <combo_box.item
         label="One per Object &amp; Channel"
         name="ScriptDialogOption_1"
         value="1"/>
        <combo_box.item
         label="Unconstrained"
         name="ScriptDialogOption_2"
         value="2"/>
      </combo_box>
        <check_box
         control_name="FSRemoveScriptBlockButton"
         height="16"
         label="Remove &quot;Block&quot; button"
         layout="topleft"
         left_pad="5"
         name="FSRemoveScriptBlockButton"
         top_delta="4"
         width="256" />

      <text
       type="string"
       left="10"
       top_pad="9"
       width="140"
       follows="left|top"
       height="16"
       layout="topleft"
       name="ScriptDialogsPositionLabel">
        Script Dialogs Position:
      </text>

        <combo_box
         control_name="ScriptDialogsPosition"
         height="23"
         layout="topleft"
         left_pad="10"
         top_delta="-5"
         name="ScriptDialogsPositionDropdown"
         tool_tip="Choose where script dialogs (menus) come up on your screen."
         width="180">

        <combo_box.item
         label="Importing old Value"
         name="ScriptDialogPositionOption_0"
         value="0"/>
        <combo_box.item
         label="Docked to Chiclet"
         name="ScriptDialogPositionOption_1"
         value="1"/>
        <combo_box.item
         label="Top Left"
         name="ScriptDialogPositionOption_2"
         value="2"/>
        <combo_box.item
         label="Top Right"
         name="ScriptDialogPositionOption_3"
         value="3"/>
        <combo_box.item
         label="Bottom Left"
         name="ScriptDialogPositionOption_4"
         value="4"/>
        <combo_box.item
         label="Bottom Right"
         name="ScriptDialogPositionOption_5"
         value="5"/>

        </combo_box>
        <check_box
         control_name="FSAnimatedScriptDialogs"
         enabled_control="ShowScriptDialogsTopRight"
         height="16"
         initial_value="true"
         label="Animate Script Dialogs"
         layout="topleft"
         left_pad="5"
         name="FSAnimatedScriptDialogs"
         tool_tip="Set this to make script dialogs animate when opening (Classic V1.x behavior). Only works when dialogs open from the top down."
         top_delta="4"
         width="256" />

        <slider
         control_name="FSRowsPerScriptDialog"
         decimal_digits="0"
         follows="left|top"
         height="16"
         increment="1"
         initial_value="20"
         label="Visible rows per script dialog:"
         label_width="160"
         layout="topleft"
         max_val="50"
         min_val="2"
         name="FSRowsPerScriptDialog"
         tool_tip="The maximum number of rows in a script dialog that will be visible at the same time."
         top_pad="9"
         left="10"
         width="400" />

      <check_box
       control_name="UsePieMenu"
       height="16"
       label="Use Pie Menu"
       layout="topleft"
       left="5"
       name="UsePieMenu"
       tool_tip="Use the classic V1 ring menu instead of rectangular context menus when right clicking on land, avatars, objects or attachments."
       top_pad="12"
       width="256" />
      <check_box
       control_name="PieMenuPopupFontEffect"
       enabled_control="UsePieMenu"
       height="16"
       label="Enable text animation"
       layout="topleft"
       left="15"
       name="PieMenuPopupFontEffect"
       tool_tip="Enables the text within the pie menu being part of the animation when the pie menu opens."
       top_pad="3"
       width="256" />
      <check_box
       control_name="PieMenuOuterRingShade"
       enabled_control="UsePieMenu"
       height="16"
       label="Enable outer ring shade"
       layout="topleft"
       left="15"
       name="PieMenuOuterRingShade"
       tool_tip="Enables an additional outer ring shade that helps visualizing sub menus."
       top_pad="3"
       width="256" />
        <check_box
         control_name="ShowGroupNoticesTopRight"
         height="16"
         initial_value="true"
         label="Group Notices and chiclets in Top Right"
         layout="topleft"
         left="5"
         name="ShowGroupNoticesTopRight"
         tool_tip="Set this to move group notifications and chiclet icons to the top right corner of the screen (Classic V1.x behavior)."
         top_pad="3"
         width="256" />
        <text
         type="string"
         left_delta="240"
         top_pad="-15"
         width="128"
         follows="left|top"
         height="12"
         layout="topleft"
         text_color="White_50"
         name="GroupTopRightRequiresRestart">
            (requires restart)
        </text>
        <check_box
         control_name="FSDisableIMChiclets"
         height="16"
         label="Hide group and IM chat chiclets"
         layout="topleft"
         left="5"
         name="FSDisableIMChiclets"
         tool_tip="If checked, Firestorm will not show any group / IM chat chiclets (notifications envelope and sum of IMs will remain on the screen)."
         top_pad="6"
         width="256" />
        <check_box
         control_name="FSLegacyNotificationWell"
         height="16"
         initial_value="true"
         label="Use legacy list layout for Notifications window"
         layout="topleft"
         left="5"
         name="FSLegacyNotificationWell"
         tool_tip="If checked, Firestorm will use the legacy list view to display stored notifications."
         top_pad="3"
         width="265" />
        <text
         type="string"
         left_pad="10"
         top_pad="-15"
         width="128"
         follows="left|top"
         height="12"
         layout="topleft"
         text_color="White_50"
         name="FSLegacyNotificationWellRequiresRestart">
            (requires restart)
        </text>

        <slider
         control_name="FlashCount"
         decimal_digits="0"
         follows="left|top"
         height="16"
         increment="1"
         label="Number of times IM tabs flash:"
         label_width="200"
         layout="topleft"
         left="10"
         min_val="0"
         max_val="16"
         name="ButtonsFlashCount"
         top_pad="14"
         width="471" />
        <slider
         control_name="FlashPeriod"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.25"
         label="IM tab flash period:"
         tool_tip="Time in seconds a single flash of IM tabs takes - used for IM notifications"
         label_width="200"
         layout="topleft"
         left="10"
         min_val="0.25"
         max_val="4"
         name="ButtonFlashRate"
         top_pad="2"
         width="467" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left="490"
         name="ButtonFlashRateText"
         top_delta="0"
         width="50">
            sec
        </text>

    </panel>	

    <!--Top Bars-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Top Bars"
     name="UI-interface-top-bars" >

		<text
		type="string"
		length="1"
		follows="left|top"
		height="16"
		layout="topleft"
		name="statusbar_textbox"
		left="10"
		top_pad="8"
		width="200">
		Status bar:
		</text>

		<check_box
		 control_name="ShowNetStats"
		 height="16"
		 tool_tip="Show traffic indicator in top menu"
		 label="Show traffic indicator in upper right corner of the screen"
		 layout="topleft"
		 name="ShowNetStats"
		 top_pad="8"
		 left="10"
		 width="250" />
		<check_box
		 enabled_control="ShowNetStats"
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Use legacy period mean per second display for traffic indicator"
		 name="FSStatbarLegacyMeanPerSec"
		 width="270"
		 left="20"
		 control_name="FSStatbarLegacyMeanPerSec"
		 tool_tip="If enabled, Firestorm will use the legacy method of showing the period mean per second value in the traffic indicator instead of the current observed value"/>
		<check_box
		 enabled_control="ShowNetStats"
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Clicking on traffic indicator opens Statistics instead of the Lag Meter"
		 name="FSUseStatsInsteadOfLagMeter"
		 width="270"
		 left="20"
		 control_name="FSUseStatsInsteadOfLagMeter"/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show media controls in top menu"
		 name="FSEnableVolumeControls"
		 left="10"
		 width="270"
		 control_name="FSEnableVolumeControls"
		 tool_tip="If checked, Firestorm will show media controls (volume, media, stream) in upper right corner of the screen. Useful, if skin already has its own controls."/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show location in top menu"
		 name="ShowMenuBarLocation"
		 width="270"
		 left="10"
		 control_name="ShowMenuBarLocation"/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show simulator channel in top menu"
		 left="20"
		 name="FSStatusbarShowSimulatorVersion"
		 enabled_control="ShowMenuBarLocation"
		 width="270"
		 control_name="FSStatusbarShowSimulatorVersion"
		 tool_tip="Shows the current simulator channel (RC Magnum, RC Le Tigre, RC BlueSteel etc.) in the V1-like status bar."/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show menu search"
		 left="10"
		 name="show_search_menu_check"
		 width="270"
		 control_name="FSMenuSearch"/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show currency balance"
		 name="FSShowCurrencyBalanceInStatusbar"
		 width="270"
		 control_name="FSShowCurrencyBalanceInStatusbar"/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Enable mouse rollover popup on status bar menu icons"
		 name="FSStatusBarMenuButtonPopupOnRollover"
		 width="270"
		 control_name="FSStatusBarMenuButtonPopupOnRollover"/>

		<text
		type="string"
		length="1"
		follows="left|top"
		height="16"
		layout="topleft"
		name="navfav_textbox"
		left="10"
		top_pad="10"
		width="200">
		Navigation &amp; Favourites bars:
		</text>

		<check_box
		 top_pad="8"
		 follows="left|top"
		 height="16"
		 label="Show Favorites Bar"
		 name="ShowNavbarFavoritesPanel"
		 width="270"
		 left="10"
		 control_name="ShowNavbarFavoritesPanel"/>
		<check_box
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show Navigation and Search Bar"
		 name="ShowNavbarNavigationPanel"
		 width="270"
		 control_name="ShowNavbarNavigationPanel"/>
		<check_box
		 enabled_control="ShowNavbarNavigationPanel"
		 top_pad="4"
		 follows="left|top"
		 height="16"
		 label="Show Search Bar"
		 name="ShowSearchTopBar"
		 width="270"
		 left="20"
		 control_name="ShowSearchTopBar"/>

    </panel>

    <!--Interface Windows-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Interface Windows"
     name="UI-interface-windows-tab" >

		<check_box
		 control_name="FSInspectAvatarSlurlOpensProfile"
		 height="16"
		 label="Open avatar profile directly when clicking on its name"
		 layout="topleft"
		 name="FSInspectAvatarSlurlOpensProfile"
		 tool_tip="If enabled, Firestorm will open the profile of an avatar directly when clicking on a link with its name"
		 initial_value="true"
		 top_pad="8"
		 left="10"
		 width="250" />
		<check_box
		 top_pad="2"
		 follows="left|top"
		 height="16"
		 label="Use web profiles by default"
		 name="FSUseWebProfiles"
		 width="270"
		 control_name="FSUseWebProfiles"
		 tool_tip="Shows profiles as a web page instead of a v1-style panel."/>
		<check_box
		 top_pad="2"
		 follows="left|top"
		 height="16"
		 label="Disable automatic opening of block list"
		 name="FSDisableBlockListAutoOpen"
		 width="270"
		 control_name="FSDisableBlockListAutoOpen"
		 tool_tip="Disables the automatic opening of the block list when blocking avatars or objects."/>
		<check_box
		 top_pad="2"
		 follows="left|top"
		 height="16"
		 label="'Friends' and 'Groups' in 'Comm' menu opens the V5 based windows"
		 name="FSUseV2Friends"
		 width="270"
		 control_name="FSUseV2Friends"
		 tool_tip="If enabled, Friends / Groups will open through the People panel - otherwise they will open in the Contacts panel."/>
		<check_box
		 top_pad="2"
		 follows="left|top"
		 height="16"
		 label="Use legacy object properties"
		 name="FSUseLegacyObjectProperties"
		 width="270"
		 control_name="FSUseLegacyObjectProperties"
		 tool_tip="If enabled, the legacy object profile window will be used when opening object properties."/>

		<text
		type="string"
		length="1"
		follows="left|top"
		height="16"
		layout="topleft"
		name="standalone_textbox"
		left="10"
		top_pad="7"
		width="200">
		Use stand-alone windows for:
		</text>
		<check_box
		top_pad="2"
		control_name="FSUseStandaloneGroupFloater"
		follows="left|top"
		height="16"
		name="FSUseStandaloneGroupFloater"
		label="Group profiles"
		left="20"
		width="170"
		tool_tip="If enabled, group profiles will open in separate windows."/>
		<check_box
		control_name="FSUseStandaloneTeleportHistoryFloater"
		follows="left|top"
		height="16"
		name="FSUseStandaloneTeleportHistoryFloater"
		label="Teleport history"
		left_pad="5"
		width="170"
		tool_tip="If enabled, using the shortcut for teleport history will open the history in a separate window."/>
		<check_box
		top_pad="2"
		control_name="FSUseStandaloneBlocklistFloater"
		follows="left|top"
		height="16"
		name="FSUseStandaloneBlocklistFloater"
		label="Block/mute list"
		left="20"
		width="170"
		tool_tip="If enabled, the list of blocked/muted residents and objects will open in a separate window."/>
		<check_box
		control_name="FSUseStandalonePlaceDetailsFloater"
		follows="left|top"
		height="16"
		name="FSUseStandalonePlaceDetailsFloater"
		label="Landmarks, place details and teleport history details"
		left_pad="5"
		width="170"
		tool_tip="If enabled, landmarks, place details and teleport history details will open in separate windows."/>

		<text
		 top_pad="7"
		 left="10"
		 layout="topleft"
		 follows="left|top"
		 height="16"
		 width="300"
		 name="ExtendedTeleportHistoryLabel">
			Extend teleport history by:
		</text>
		<check_box
		control_name="FSTeleportHistoryShowPosition"
		top_pad="2"
		left="20"
		layout="topleft"
		follows="left|top"
		height="16"
		name="FSTeleportHistoryShowPosition"
		label="Position"
		width="75"
		tool_tip="If enabled, the local coordinates within the region will be shown in the teleport history."/>
		<check_box
		top_delta="0"
		control_name="FSTeleportHistoryShowDate"
		follows="left|top"
		height="16"
		name="FSTeleportHistoryShowDate"
		label="Date"
		left_pad="5"
		width="75"
		tool_tip="If enabled, the date and time of the teleport will be shown in the teleport history."/>

		<text
		 top_pad="7"
		 left="10"
		 layout="topleft"
		 follows="left|top"
		 height="16"
		 width="300"
		 name="textFriendlistOptions">
