<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="UI-Pref"
 name="Display panel">
<tab_container
 label="Firestorm Prefs"
 layout="topleft"
 follows="all"
 top="5"
 bottom="-10"
 left="1"
 right="-1"
 name="tabs"
 tab_min_width="50"
 tab_position="top" >

    <!--General-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="General"
     name="UI Prefs Panel" >

        <text
         type="string"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         left="10"
         name="UI Size:"
         top_pad="10"
         width="200">
            UI Scaling (may have side effects):
        </text>
        <slider
         control_name="UIScaleFactor"
         decimal_digits="2"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="1"
         layout="topleft"
         left_pad="0"
         max_val="1.4"
         min_val="0.75"
         name="ui_scale_slider"
         top_pad="-14"
         width="250" />

        <text
         type="string"
         left="5"
         top_pad="10"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         name="HoverTipText"
         width="100">
            Hover Tips:
        </text>

        <check_box
         control_name="ShowHoverTips"
         height="16"
         initial_value="true"
         label="Show Hover Tips"
         layout="topleft"
         left_delta="10"
         name="ShowHoverTips"
         tool_tip="Set this to show hover tips on avatars and some other things - set this one first (CTRL+SHIFT+T)"
         top_pad="12"
         width="256" />
        <check_box
         control_name="ShowAllObjectHoverTip"
         height="16"
         initial_value="true"
         label="on All Objects"
         tool_tip="Set this to show hover tips on in-world objects"
         layout="topleft"
         left_delta="10"
         name="ShowAllHoverTips"
         top_pad="2"
         width="256" />
        <check_box
         control_name="ShowLandHoverTip"
         height="16"
         initial_value="true"
         label="on Land"
         tool_tip="Set this to show hover tips on land"
         layout="topleft"
         left_delta="0"
         name="ShowLandHoverTips"
         top_pad="2"
         width="256" />

        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left="275"
         name="tooltip_textbox"
         top_pad="-76"
         width="200">
           Hovertip Trigger Delays:
        </text>
		
