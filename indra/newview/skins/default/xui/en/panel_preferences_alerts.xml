<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Popups"
 name="popups">
    <text
     type="string"
     length="1"
     follows="top|left"
     height="15"
     layout="topleft"
     left="10"
     name="tell_me_label"
     top="8"
     width="300">
        Tell me:
    </text>

    <check_box
     control_name="NotifyMoneyChange"
     height="16"
     label="When I spend or get L$"
     layout="topleft"
     left="10"
     name="notify_money_change_checkbox"
     top_pad="2"
     width="160" />
    <check_box
     enabled_control="NotifyMoneyChange"
     layout="topleft"
     follows="left|top"
     left_pad="30"
     height="18"
     control_name="FSPaymentInfoInChat"
     name="FSPaymentInfoInChat"
     label="Show L$ transactions in nearby chat instead of toasts"/>

    <check_box
     control_name="FSLandmarkCreatedNotification"
     height="16"
     label="When a landmark has been created"
     layout="topleft"
     left="10"
     name="landmark_created_checkbox"
     top_pad="2"
     width="210" />

    <check_box
     control_name="FSShowDisplayNameUpdateNotification"
     height="16"
     label="When somebody changes their display name"
     layout="topleft"
     left_pad="10"
     name="FSShowDisplayNameUpdateNotification"
     width="180" />

	<check_box
     control_name="ShowScriptErrors"
     follows="left|top"
     height="16"
     label="When I have Script Errors in:"
     layout="topleft"
     left="10"
     top_pad="2"
     name="show_script_errors"
     width="180" />
    <radio_group
     enabled_control="ShowScriptErrors"
     control_name="ShowScriptErrorsLocation"
     follows="top|left"
     draw_border="false"
     height="16"
     layout="topleft"
     left_pad="5"
     name="show_script_errors_location"
     width="200">
        <radio_item
         height="16"
         label="Nearby chat"
         layout="topleft"
         left_delta="5"
         name="script_0"
         top="0"
         width="100" />
        <radio_item
         height="16"
         label="Separate window"
         layout="topleft"
         left_delta="100"
         name="script_1"
         top_delta="0"
         width="100" />
    </radio_group>

	 <text
     type="string"
     length="1"
     follows="top|left"
     height="15"
     layout="topleft"
     left="10"
     name="friends_logon_label"
     width="400">
        Show when my friends log in or out:
    </text>
	 
    <check_box
     control_name="ChatOnlineNotification"
     height="16"
     label="As toasts"
     layout="topleft"
     left="10"
     name="friends_online_notify_checkbox"
     top_pad="2"
     width="100" />
    <check_box
     control_name="OnlineOfflinetoNearbyChat"
     name="OnlineOfflinetoNearbyChat"
     label="In nearby chat and console"
     layout="topleft"
     left_pad="0"
     height="18"
     width="190">
     <check_box.commit_callback
    function="Pref.Online_Notices" />
    </check_box>
    <check_box
     enabled="false"
     control_name="OnlineOfflinetoNearbyChatHistory"
     follows="left|top"
     height="18"
     label="In nearby chat only"
     layout="topleft"
     left_pad="0"
     name="OnlineOfflinetoNearbyChatHistory"
     width="180" />
     <check_box
      control_name="FSEnableGrowl"
      height="16"
      label="Enable Growl Notifications"
      layout="topleft"
      left="10"
      name="notify_growl_checkbox"
      top_pad="2"
      width="160" />
     <check_box
      enabled_control="FSEnableGrowl"
      layout="topleft"
      follows="left|top"
      left_pad="30"
      height="18"
      control_name="FSGrowlWhenActive"
      name="notify_growl_always_checkbox"
      label="Enable Growl even if Firestorm is active"/>

    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="show_label"
     top_pad="8"
     width="450">
        Always show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="123"
     layout="topleft"
     left="10"
     multi_select="true"
     name="enabled_popups"
     sort_column="0"
     sort_ascending="true"
     width="495" />
    <button
     enabled_control="FirstSelectedDisabledPopups"
     follows="top|left"
     height="23"
     image_overlay="Arrow_Up"
     hover_glow_amount="0.25"
     layout="topleft"
     left="200"
     name="enable_this_popup"
     top_pad="5"
     width="40">
        <button.commit_callback
         function="Pref.ClickEnablePopup" />
    </button>
    <button
     enabled_control="FirstSelectedEnabledPopups"
     follows="top|left"
     height="23"
     image_overlay="Arrow_Down"
     hover_glow_amount="0.25"
     layout="topleft"
     left_pad="20"
     name="disable_this_popup"
     top_delta="0"
     width="40">
        <button.commit_callback
         function="Pref.ClickDisablePopup" />
    </button>
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="dont_show_label"
     top_pad="-10"
     width="450">
        Never show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="123"
     layout="topleft"
     left="10"
     sort_column="0"
     sort_ascending="true"
     multi_select="true"
     name="disabled_popups"
     width="495" />
</panel>
