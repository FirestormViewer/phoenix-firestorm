<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Skins"
 name="skin_panel">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="skin_textbox"
     top="10"
     width="400">
        Skin:
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     max_chars="135"
     name="skin_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="skin_textbox1"
     width="200">
        (Requires restart)
    </text>

    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     top_pad="15"
     name="theme_textbox"
     width="200">
        Colour scheme:
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     name="theme_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="theme_textbox2"
     width="200">
        (Requires restart)
    </text>

    <check_box
     control_name="FSSkinClobbersToolbarPrefs"
     enabled="true"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Reset toolbars to the skin's preferred layout when changing skins. (recommended)"
	 tool_tip="When enabled, this option preserves the skin's designed toolbar button layout and will override your chosen button customisations when you change skins or change login mode."
     layout="topleft"
     left="30"
     top_pad="20"
     name="reset_toolbar_settings"
     width="200" />


    <check_box
     control_name="UseLegacyCursors"
     enabled="false"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Use Viewer 1 style cursors"
     layout="topleft"
     left="30"
     top_pad="20"
     name="use _legacy_cursors"
     width="200" />
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="30"
     name="theme_textbox3"
     width="200">
        (Requires restart)
    </text>





</panel>
