<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="480"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Skins"
 name="skin_panel">

    <button
     image_color="SL-White"
     image_color_disabled="SL-White"
     scale_image="true"
     display_pressed_state="false"
     hover_glow_amount="0.0"
     left="30"
     top="20"
     follows="left|top"
     layout="topleft"
     width="414"
     height="225"
     name="skin_preview"
     image_selected="Blank"
     image_unselected="Blank" />

    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="skin_textbox"
     top_pad="15"
     width="400">
        Skin:
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     max_chars="135"
     name="skin_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="skin_textbox1"
     width="200">
        (Requires restart)
    </text>

    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     top_pad="15"
     name="theme_textbox"
     width="200">
        Colour scheme:
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     name="theme_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="theme_textbox2"
     width="200">
        (Requires restart)
    </text>

    <check_box
     control_name="FSSkinClobbersToolbarPrefs"
     enabled="true"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Reset toolbars to the skin's preferred layout when changing skins."
	 tool_tip="When enabled, this option preserves the skin's designed toolbar button layout and will override your chosen button customisations when you change skins."
     layout="topleft"
     left="30"
     top_pad="15"
     name="reset_toolbar_settings"
     width="200" />

    <check_box
     control_name="FSToolbarsResetOnModeChange"
     enabled="true"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Reset toolbars to the login mode's preferred layout when changing login modes."
	 tool_tip="When enabled, this option preserves the login mode's designed toolbar button layout and will override your chosen button customisations when you change login mode."
     layout="topleft"
     left="30"
     top_pad="5"
     name="FSToolbarsResetOnModeChange"
     width="200" />

    <check_box
     control_name="FSUseLegacyCursors"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Use Viewer 1 style cursors"
     layout="topleft"
     left="30"
     top_pad="5"
     name="use_legacy_cursors"
     width="200" />
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="30"
     name="theme_textbox3"
     width="200">
        (Requires restart)
    </text>





</panel>
