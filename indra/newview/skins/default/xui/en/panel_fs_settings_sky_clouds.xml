	<panel
	name="P_Clouds_Header"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="22"
	bg_alpha_color="EmphasisColor"
	border_visible="true"
	border_thickness="1"
	background_visible="true">

		<text
		name="T_Clouds_Header"
		follows="left|top"
		layout="topleft"
		left="5"
		font="SansSerif"
		value="Cloud Settings"/>
			
	</panel>	

	<panel
	name="P_Atmos_Settings"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="35"
	border_visible="true"
	bevel_style="in"
	background_visible="true">

		<text
		name="cloud_color_label"
		follows="left|top"
		height="10"
		layout="topleft"
		left="5"
		top_pad="10"
		width="50">
		Color:
		</text>

		<color_swatch
		can_apply_immediately="true"
		follows="left|top"
		height="25"
		label_height="0"
		layout="topleft"
		left_delta="55"
		name="cloud_color"
		top_delta="-5"
		width="185" /> 	

	</panel>

	<panel
	name="P_Cloud_Density"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="60"
	border_visible="true"
	bevel_style="in"
	background_visible="true">
	
	
		<text
		name="cloud_coverage_label"
		follows="left|top"
		height="15"
		layout="topleft"
		left="5"
		width="55">
		Cover:
		</text>
	
		<slider
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="55"
		min_val="0"
		max_val="1"
		name="cloud_coverage"
		left_pad="50"
		width="190"
		can_edit_text="true"/>
				
		<text
		name="cloud_scale_label"
		follows="left|top"
		height="15"
		layout="topleft"
		left="5"
		width="50">
		Scale:
		</text>

		<slider
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="55"
		min_val="0"
		max_val="3"
		name="cloud_scale"
		left_pad="50"
		width="190"
		can_edit_text="true"/>

		<text
		name="cloud_variance_label"
		follows="left|top"
		height="15"
		layout="topleft"
		left="5"
		width="50">
		Variance:
		</text>

		<slider
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="55"
		min_val="0"
		max_val="1.0"
		name="cloud_variance"
		left_pad="50"
		width="190"
		can_edit_text="true"/>
		
	</panel>

	<panel
	name="P_Cloud_Density"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="80"
	border_visible="true"
	bevel_style="in"
	background_visible="true">

		<text
		type="string"
		length="1"
		follows="left|top"
		font="SansSerif"
		height="16"
		layout="topleft"
		left="5"
		name="cloud_density_label"
		top_pad="5"
		tool_tip="Cloud XY/Density - Use the X and Y sliders to change the horizontal position of all clouds in the sky. The D slider affects the overall density of the individual clouds; at low settings you will see thin, wispy clouds, and at higher settings you will see thicker, more solid clouds."
		width="240">
		Cloud XY/Density
		</text>

		<slider
		label="X"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="5"
		min_val="0"
		max_val="1"
		name="cloud_density_x"
		top_pad="2"
		width="240"
		can_edit_text="true"/>

		<slider
		label="Y"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="5"
		min_val="0"
		max_val="1"
		name="cloud_density_y"
		top_pad="2"
		width="240"
		can_edit_text="true"/>

		<slider
		label="D"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="5"
		min_val="0"
		max_val="3"
		name="cloud_density_d"
		top_delta="20"
		width="240"
		can_edit_text="true"/>

	</panel>

	<panel
	name="P_Cloud_Detail"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="80"
	border_visible="true"
	bevel_style="in"
	background_visible="true">

		<text
		type="string"
		length="1"
		follows="left|top"
		font="SansSerif"
		height="16"
		layout="topleft"
		left="5"
		name="cloud_detail_label"
		top_pad="5"
		tool_tip="Cloud XY/Density - Use the X and Y sliders to change the horizontal position of all clouds in the sky. The D slider affects the overall density of the individual clouds; at low settings you will see thin, wispy clouds, and at higher settings you will see thicker, more solid clouds."
		width="240">
		Cloud XY/Detail
		</text>


		<slider
		label="X"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left="5"
		min_val="0"
		max_val="1"
		name="cloud_detail_x"
		top_pad="2"
		width="240"
		can_edit_text="true"/>

		<slider
		label="Y"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left_delta="0"
		min_val="0"
		max_val="1"
		name="cloud_detail_y"
		top_delta="20"
		width="240"
		can_edit_text="true"/>

		<slider
		label="D"
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0"
		layout="topleft"
		left_delta="0"
		min_val="0"
		max_val="1"
		name="cloud_detail_d"
		top_delta="20"
		width="240"
		can_edit_text="true"/>	
		
	</panel>

	<panel	
	name="P_Cloud_Scroll"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="0"
	width="250"
	height="105"
	border_visible="true"
	bevel_style="in"
	background_visible="true">
	
		<text
		name="cloud_scroll_label"
		follows="left|top"
		height="10"
		layout="topleft"
		left="5"
		top_pad="5"
		width="40">
		Scroll:
		</text>

		<text
		name="cloud_image_label"
		follows="left|top"
		height="10"
		layout="topleft"
		left_pad="90"
		top_delta="0"
		width="50">
		Image:
		</text>

		<xy_vector
		follows="left|top"
		name="cloud_scroll_xy"
		width="110"
		height="80"
		visible="true"
		left="5"
		top_pad="5"
		min_val_x="-30"
		max_val_x="30"
		min_val_y="-30"
		max_val_y="30" 
		logarithmic="1"/>

		<texture_picker
		height="100"
		layout="topleft"
		left_pad="20"
		name="cloud_map"
		top_delta="0"
		width="110"/>
	
		
