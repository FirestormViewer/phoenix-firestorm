<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
        border="true"
        follows="all"
        label="Sun &amp; Moon"
        layout="topleft"
        left="0"
        name="panel_settings_sky_hbodies"
        top="0">
    <layout_stack 
            name="main_ls"
            follows="all"
            layout="topleft"
            left="5"
            top="5"
            right="-5"
            bottom="-5"
            orientation="horizontal">
        <layout_panel
                border="true"
                bevel_style="in"
                auto_resize="true"
                user_resize="false"
                visible="true"
                name="sun_layout"
                height="400">
            <text
                    name="sun_stars_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="15"
                    top_pad="15"
                    font="SansSerifBold"
                    width="120">
                Sun &amp; Stars
            </text>
            <check_box
                    control_name="sunbeacon"
                    width="60"
                    height="16"
                    label="Show Beacon"
                    layout="topleft"
                    name="sunbeacon" 
                    top_delta="0"
                    left="180"/>  
            <text
                    name="position_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="20"
                    width="100">
                Position:
            </text>
            <sun_moon_trackball
                    name="sun_rotation"
                    follows="left|top"
                    left_delta="0"
                    top_delta="15"
                    height="150"
                    width="150"
                    thumb_mode="sun" />
            <text
                    name="image_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="160"
                    top_delta="-15"
                    width="200">
                Image and scale:
            </text>
            <texture_picker
                    height="123"
                    layout="topleft"
                    left_delta="5"
                    name="sun_image"
                    top_pad="5"
                    width="100"/>
            <slider_bar
                    decimal_digits="2"
                    follows="left|top"
                    height="100"
                    top_delta="0"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0.25"
                    max_val="20"
                    name="sun_scale"
                    orientation="vertical"
                    width="16"
                    can_edit_text="false"/>
            <text
                    name="color_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="180"
                    top_pad="5"
                    width="80">
                Color:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="25"
                    label_height="0"
                    layout="topleft"
                    left_delta="5"
                    name="sun_moon_color"
                    top_pad="5"
                    width="60" />
          <text
            follows="left|top"
            name="sun_azimuth_label"
            height="10"
            layout="topleft"
            left="20"
            top_delta="45"
            width="90">
            Azimuth:
          </text>
          <slider
            decimal_digits="2"
            follows="left|top"
            height="16"
            increment="0.01"
            initial_value="0"
            layout="topleft"
            left_pad="5"
            min_val="0"
            max_val="359.99"
            name="sun_azimuth"
            top_delta="0"
            width="215"
            can_edit_text="true"/>
          <text
            follows="left|top"
            name="sun_elevation_label"
            height="10"
            layout="topleft"
            left="20"
            top_delta="22"
            width="90">
            Elevation:
          </text>
          <slider
            decimal_digits="2"
            follows="left|top"
            height="16"
            increment="0.01"
            initial_value="0"
            layout="topleft"
            left_pad="5"
            min_val="-90"
            max_val="90"
            name="sun_elevation"
            top_delta="0"
            width="215"
            can_edit_text="true"/>
            <text
                    name="glow_focus_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="90">
                Glow Focus:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="-2"
                    max_val="2"
                    name="glow_focus"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>
            <text
                    name="glow_size_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="90">
                Glow Size:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0"
                    max_val="1.99"
                    name="glow_size"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>
            <text
                    name="star_brightness_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="90">
                Star Brightness:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0"
                    max_val="500"
                    name="star_brightness"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>                    
        </layout_panel>
        <layout_panel
                border="true"
                bevel_style="in"
                name="moon_layout"
                auto_resize="true"
                user_resize="false"
                visible="true"
                height="400">
                <text
                        name="moon_label"
                        follows="left|top"
                        height="10"
                        layout="topleft"
                        left_delta="15"
                        top_pad="15"
                        font="SansSerifBold"
                        width="120">
                Moon
                </text>
                <check_box
                        control_name="moonbeacon"
                        width="60"
                        height="16"
                        label="Show Beacon"
                        layout="topleft"
                        name="moonbeacon" 
                        top_delta="0"
                        left="180"/>  
                <text
                        name="position_label"
                        follows="left|top"
                        height="10"
                        layout="topleft"
                        left="20"
                        top_delta="20"
                        width="100">
                Position:
                </text>
                    <sun_moon_trackball
                            name="moon_rotation"
                            follows="left|top"
                            left_delta="0"
                            top_delta="15"
                            height="150"
                            width="150"
                            thumb_mode="moon" />
                    <text
                            name="moon_image_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="160"
                            top_delta="-15"
                            width="200">
                        Image and scale:
                    </text>
                    <texture_picker
                            height="123"
                            layout="topleft"
                            left_delta="5"
                            name="moon_image"
                            top_pad="10"
                            width="100"/>
                    <slider_bar
                            decimal_digits="2"
                            follows="left|top"
                            height="100"
                            top_delta="0"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0.25"
                            max_val="20"
                            name="moon_scale"
                            orientation="vertical"
                            width="16"
                            can_edit_text="false"/>
                  <text
                    follows="left|top"
                    name="moon_azimuth_label"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="160"
                    width="90">
                    Azimuth:
                  </text>
                  <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0"
                    max_val="359.99"
                    name="moon_azimuth"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>
                  <text
                    follows="left|top"
                    name="moon_elevation_label"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="90">
                    Elevation:
                  </text>
                  <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="-90"
                    max_val="90"
                    name="moon_elevation"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>
                  <text
                    name="brightness_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="90">
                    Brightness:
                  </text>
                  <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0.0"
                    max_val="1.0"
                    name="moon_brightness"
                    top_delta="0"
                    width="215"
                    can_edit_text="true"/>                           
        </layout_panel>
    </layout_stack>
</panel>                
