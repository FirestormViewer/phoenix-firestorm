<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
        border="true"
        follows="all"
        label="Sun &amp; Moon"
        layout="topleft"
        left="0"
        name="panel_settings_sky_hbodies"
        top="0">
    <layout_stack 
            name="main_ls"
            follows="all"
            layout="topleft"
            left="5"
            top="5"
            right="-5"
            bottom="-5"
            orientation="horizontal">
        <layout_panel
                border="true"
                bevel_style="in"
                auto_resize="true"
                user_resize="false"
                visible="true"
                name="sun_layout"
                height="400">
            <text
                    name="sun_stars_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="15"
                    top_pad="15"
                    font="SansSerifBold"
                    width="120">
                Sun &amp; Stars
            </text>
            <text
            name="position_label"
            follows="left|top"
            height="10"
            layout="topleft"
            left="20"
            top_delta="20"
            width="100">
            Position:
        </text>
        <sun_moon_trackball
        name="sun_rotation"
        follows="left|top"
                    left_delta="0"
                    top_delta="15"
                    height="150"
                    width="150"
                    thumb_mode="sun" />
                    <text
                    name="image_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="160"
                    top_delta="-15"
                    width="200">
                    Image:
                </text>
                <texture_picker
                height="123"
                layout="topleft"
                left_delta="5"
                name="sun_image"
                top_pad="5"
                width="100"/>
                <text
                name="scale_label"
                follows="left|top"
                height="10"
                layout="topleft"
                left_delta="-5"
                top_delta="110"
                width="80">
                Scale:
        </text>
        <slider
        decimal_digits="2"
        follows="left|top"
        height="16"
        increment="0.01"
        initial_value="0"
        layout="topleft"
        left_delta="5"
        min_val="0.25"
        max_val="20"
        name="sun_scale"
        top_delta="15"
        width="130"
        can_edit_text="true"/>
        <check_box
        control_name="sunbeacon"
        width="60"
        height="16"
        label="Show Beacon"
        layout="topleft"
        name="sunbeacon" 
        top_delta="30"
        left="20"/>
        <text
        name="color_label"
        follows="left|top"
        height="10"
        layout="topleft"
        left="180"
        top_delta="0"
        width="80">
        Color:
        </text>
        <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="25"
                    label_height="0"
                    layout="topleft"
                    left_delta="5"
                    name="sun_moon_color"
                    top_pad="5"
                    width="60" />
            <text
                    name="glow_focus_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="43"
                    width="115">
                Glow Focus:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="-2"
                    max_val="2"
                    name="glow_focus"
                    top_delta="0"
                    width="175"
                    can_edit_text="true"/>
            <text
                    name="glow_size_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="115">
                Glow Size:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0"
                    max_val="1.99"
                    name="glow_size"
                    top_delta="0"
                    width="175"
                    can_edit_text="true"/>
            <text
                    name="star_brightness_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="20"
                    top_delta="22"
                    width="115">
                Star Brightness:
            </text>
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_pad="5"
                    min_val="0"
                    max_val="500"
                    name="star_brightness"
                    top_delta="0"
                    width="175"
                    can_edit_text="true"/>
        </layout_panel>
        <layout_panel
                name="moon_layout_main"
                border="false"
                bevel_style="in"
                auto_resize="true"
                user_resize="false"
                visible="true"
                height="400">
            <layout_stack 
                    name="moon_ls"
                    left="5"
                    top="0"
                    right="-5"
                    bottom="-5"
                    follows="left|top|right|bottom"
                    orientation="vertical">
                <layout_panel
                        border="true"
                        bevel_style="in"
                        auto_resize="true"
                        user_resize="false"
                        visible="true"
                        name="moon_layout"
                        height="220">
                    <text
                            name="moon_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="15"
                            top_pad="15"
                            font="SansSerifBold"
                            width="80">
                        Moon
                    </text>
                    <text
                            name="position_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="10"
                            top_delta="20"
                            width="100">
                        Position:
                    </text>
                    <sun_moon_trackball
                            name="moon_rotation"
                            follows="left|top"
                            left_delta="0"
                            top_delta="15"
                            height="150"
                            width="150"
                            thumb_mode="moon" />
                    <text
                            name="image_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="160"
                            top_delta="-20"
                            width="200">
                        Image:
                    </text>
                    <texture_picker
                            height="123"
                            layout="topleft"
                            left_delta="5"
                            name="moon_image"
                            top_pad="10"
                            width="100"/>
                    <text
                            name="scale_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_delta="110"
                            width="80">
                        Scale:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="0.25"
                            max_val="20"
                            name="moon_scale"
                            top_delta="15"
                            width="130"
                            can_edit_text="true"/>
                            <check_box
                                    control_name="moonbeacon"
                                    width="60"
                                    height="16"
                                    label="Show Beacon"
                                    layout="topleft"
                                    name="moonbeacon" 
                                    top_delta="30"
                                    left="20"
                                    bottom="-10"/>
                            <text
                            name="brightness_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="20"
                            top_delta="25"
                            width="120">
                        Brightness:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0.0"
                            max_val="1.0"
                            name="moon_brightness"
                            top_delta="0"
                            width="175"
                            can_edit_text="true"/>
                            
                </layout_panel>
            </layout_stack>
        </layout_panel>
    </layout_stack>
</panel>                
