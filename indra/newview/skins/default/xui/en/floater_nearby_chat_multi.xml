<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
 border_visible="false"
 border="false"
 legacy_header_height="18"
 can_minimize="true"
 can_tear_off="false"
 can_resize="true"
 can_drag_on_left="false"
 can_close="false"
 can_dock="true"
 bevel_style="in"
 height="350"
 min_height="300"
 min_width="235"
 layout="topleft"
 name="nearby_chat"
 help_topic="nearby_chat"
 save_rect="true"
 title="NEARBY CHAT"
 save_dock_state="true"
 save_tearoff_state="true"
 save_visibility="true"
 single_instance="true"
 width="320">
	<layout_stack
	 clip="false"
	 follows="all"
	 height="320"
	 layout="topleft"
	 left="0"
	 mouse_opaque="false"
	 name="im_panels"
	 orientation="vertical"
	 top="20"
	 width="320">
		<layout_panel
		 height="270"
		 layout="topleft"
		 left="0"
		 min_dim="200"
		 mouse_opaque="false"
		 top="0"
		 width="320"
		 user_resize="true">
			<check_box
			 control_name="TranslateChat"
			 enabled="true"
			 height="16"
			 label="Translate chat (powered by Google)"
			 layout="topleft"
			 left="5"
			 name="translate_chat_checkbox"
			 width="230" />
			<chat_history
			 parse_urls="true"
			 bg_readonly_color="ChatHistoryBgColor"
			 bg_writeable_color="ChatHistoryBgColor"
			 follows="all"
			 layout="topleft"
			 left="5"
			 height="255"
			 name="chat_history"
			 parse_highlights="true"
			 text_color="ChatHistoryTextColor"
			 text_readonly_color="ChatHistoryTextColor"
			 right_widget_pad="5"
			 left_widget_pad="0"
			 width="315" />
		</layout_panel>

		<layout_panel
		 height="50"
		 layout="topleft"
		 left="0"
		 min_dim="35"
		 mouse_opaque="false"
		 width="320"
		 user_resize="true">
			<panel
			 follows="all"
			 height="45"
			 layout="topleft"
			 left="5"
			 name="panel_chat_bar_multi"
			 width="310" >
				<text_editor
				 commit_on_return="true"
				 follows="all"
				 height="45"
				 label="Click here to chat"
				 layout="topleft"
				 max_length="1024"
				 name="chat_editor"
				 use_ellipses="false"
				 width="310"
				 word_wrap="true" />
			</panel>
		</layout_panel>

	</layout_stack>
</floater>
