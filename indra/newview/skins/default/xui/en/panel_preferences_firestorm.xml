         label="Disable random avatar eye moments"
         left="15"
         name="FSStaticEyes"
         width="250"
         control_name="FSStaticEyes">
			<check_box.commit_callback
			 function="Pref.StaticEyes" />
		</check_box>

        <!-- LGG Color Beams -->
        <text
         name="BeamPrefs"
         follows="left|top"
         left="15"
         bottom_delta="25" >
            Selection beam particle effects
        </text>
        <view_border
         bevel_style="none"
         border_thickness="1"
         top_delta="15"
         follows="top|left"
         height="0"
         left="15"
         name="BeamDivisor"
         width="490" />

        <button
         enabled_control="ShowSelectionBeam"
         name="BeamColor_delete"
