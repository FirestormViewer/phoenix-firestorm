    </panel>

    <!--Windlight-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Windlight"
     name="WindlightTab">

        <check_box
         top_pad="10"
         left="10"
         label="Automatically change environment to use region/parcel settings."
         control_name="UseEnvironmentFromRegionAlways"
         follows="left|top"
         height="16"
         name="UseEnvironmentFromRegionAlways"
         width="256" />

        <check_box
         top_pad="8"
         label="Crossfade region environment sky preset changes made from quick prefs"
         control_name="FSInterpolateSky"
         follows="left|top"
         height="16"
         name="FSInterpolateSky"
         width="256"
         tool_tip="This controls the fancy blending between WL settings on change. The effect may cause slower computers to drop FPS for a few seconds while changing settings. Disable these 2 options to skip the effect and apply instantly." />
        <check_box
         top_pad="8"
         label="Crossfade region environment water preset changes made from quick prefs"
         control_name="FSInterpolateWater"
         follows="left|top"
         height="16"
         name="FSInterpolateWater"
         width="256"
         tool_tip="Same as above but for the water." />


        <text
         top_pad="10"
         left="10"
         follows="left|top"
         height="12"
         name="FSWLshare_txt"
         width="250">
          Firestorm WL Share
        </text>
        <check_box
         top_pad="8"
         label="Use Firestorm Parcel Windlight Sharing"
         control_name="FSWLParcelEnabled"
         follows="left|top"
         height="16"
         name="FSWLParcelEnabled"
         width="256" />
        <check_box
         top_pad="5"
         left="15"
         label="Auto apply WL settings from friend's land"
         control_name="FSWLWhitelistFriends"
         enabled_control="FSWLParcelEnabled"
         follows="left|top"
         height="16"
         name="FSWLWhitelistFriends"
         width="256" />
        <check_box
         top_pad="5"
         label="Auto apply WL settings from my groups' land"
         control_name="FSWLWhitelistGroups"
         enabled_control="FSWLParcelEnabled"
         follows="left|top"
         height="16"
