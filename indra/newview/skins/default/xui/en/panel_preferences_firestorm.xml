        <slider
         enabled_control="ShowSelectionBeam"
         bottom_delta="25"
         left_delta="-15"
         name="FSBeamShapeScale"
         control_name="FSBeamShapeScale"
         decimal_digits="1"
         enabled="true"
         follows="left|top"
