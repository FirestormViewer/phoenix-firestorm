<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!-- lots of colors changed in this file -->
<panel
  background_opaque="false"
  border_visible="false"
  background_visible="false"
  bg_alpha_color="ScriptDialog"
  bg_opaque_color="ScriptDialog"
  label="notification_panel"
  layout="topleft"
  left="0"
  name="notification_panel"
  top="0"
  	height="140"
  translate="false"
  width="310">
  <!-- THIS PANEL CONTROLS TOAST HEIGHT? -->
  <panel
    border_visible="false"
    bevel_style="none"
    background_visible="true"
    bg_alpha_color="Titanium_0"
    bg_opaque_color="Titanium_0"
    follows="left|right|top"
    height="100"
    label="info_panel"
    layout="topleft"
    left="0"
    name="info_panel"
    top="0"
    width="310">
    <text
      border_visible="false"
      follows="all"
      font="SansSerif"
      height="85"
      layout="topleft"
      left="10"
      name="text_box"
      read_only="true"
      text_color="ScriptDialogFg"
      text_readonly_color="ScriptDialogFg"
      top="10"
      visible="false"
      width="290"
      wrap="true"/>
    <text_editor
      h_pad="0"
      v_pad="0"
      bg_readonly_color="Transparent"
      border_visible="false"
      embedded_items="false"
      enabled="false"
      follows="left|right|top|bottom"
      font="SansSerif"
      height="85"
      layout="topleft"
      left="10"
      mouse_opaque="false"
      name="text_editor_box"
      read_only="true"
      tab_stop="false"
      text_color="ScriptDialogFg"
      text_readonly_color="ScriptDialogFg"
      top="10"
      visible="false"
      width="290"
      wrap="true"
      parse_highlights="true"
      parse_urls="true"/>
  </panel>
  <panel
    background_visible="false"
    follows="left|right|bottom"
    height="30"
    width="290"
    label="control_panel"
    layout="topleft"
    left="10"
    name="control_panel"
    top_pad="5">
    <!--
    Notes:
    This panel holds buttons of notification. Change of its size can affect the layout of buttons.
     -->
  </panel>
</panel>
