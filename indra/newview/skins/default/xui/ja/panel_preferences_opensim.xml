<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Opensim" name="opensim_panel">
  <tab_container label="Opensim" name="tabs">
    <panel label="グリッドマネージャー" name="grid_management_panel">
      <text name="add_grid_text">新しいグリッドを追加</text>
      <line_editor name="add_grid" label="ログインＵＲＩを入力" />
      <button label="クリア" label_selected="クリア" name="clear_grid" />
      <button label="反映" name="apply_new_grid" />
      <text name="add_grid_text">グリッドの管理</text>
      <scroll_list name="grid_list">
        <scroll_list.columns name="grid_label" />
        <scroll_list.columns label="ログインＵＲＩ" name="login_uri" />
      </scroll_list>
      <button label="リフレッシュ" name="refresh_grid" />
      <button label="削除" name="remove_grid" />
      <panel label="" name="advanced_grid_panel">
        <text name="grid_name_text">グリッド名：</text>
        <line_editor name="name_edit" />
        <check_box label="" name="enable_lock" />
        <icon name="lock" />
        <text name="grid_uri_text">グリッドＵＲＩ：</text>
        <line_editor name="grid_uri_edit" />
        <text name="login_page_text">ログインページ：</text>
        <line_editor name="login_page_edit" />
        <text name="helper_uri_text">ヘルパーＵＲＩ：</text>
        <line_editor name="helper_uri_edit" />
        <text name="website_text">グリッドのWebサイト：</text>
        <line_editor name="website_edit" />
        <text name="support_text">グリッドのサポート：</text>
        <line_editor name="support_edit" />
        <text name="register_text">グリッドへの登録：</text>
        <line_editor name="register_edit" />
        <text name="password_text">グリッドのパスワードのＵＲＩ：</text>
        <line_editor name="password_edit" />
        <text name="search_text">グリッド検索：</text>
        <line_editor name="search_edit" />
        <text name="message_text">グリッドメッセージＵＲＩ：</text>
        <line_editor name="message_edit" />
      </panel>
    </panel>
    <panel label="その他" name="opensim_misc_panel">
      <check_box label="検索のデバッグ" name="DebugSearch" />
      <text name="search_url_debug_text">現在の検索ＵＲＬを上書き（空の場合は上書きしない）：</text>
      <line_editor name="search_url_debug" />
      <button label="クリア" name="clear_search_url_debug" />
      <button label="ピック" name="pick_current_search_url" />
    </panel>
  </tab_container>
</panel>