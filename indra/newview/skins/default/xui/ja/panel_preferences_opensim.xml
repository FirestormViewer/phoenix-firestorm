<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Opensim" name="opensim_panel">
	<tab_container label="Opensim" name="tabs">
		<panel label="グリッド管理" name="grid_management_panel">
			<text name="add_grid_text">
				グリッドを追加
			</text>
			<line_editor name="add_grid" label="ログインＵＲＩ入力"/>
			<button label="クリア" label_selected="クリア" name="clear_grid"/>
			<button label="適用" name="apply_new_grid"/>
			<text name="add_grid_text">
				グリッド一覧
			</text>
			<scroll_list name="grid_list">
				<scroll_list.columns label="グリッド名称" name="grid_label"/>
				<scroll_list.columns label="ログインＵＲＩ" name="login_uri"/>
			</scroll_list>
			<button label="更新" name="refresh_grid"/>
			<button label="削除" name="remove_grid"/>
			<panel name="advanced_grid_panel">
				<text name="grid_name_text">
					グリッド名称：
				</text>
				<text name="grid_uri_text">
					グリッドのＵＲＩ：
				</text>
				<text name="login_page_text">
					ログインページ：
				</text>
				<text name="helper_uri_text">
					ヘルパーＵＲＩ：
				</text>
				<text name="website_text">
					グリッドのWebサイト：
				</text>
				<text name="support_text">
					グリッドのサポート：
				</text>
				<text name="register_text">
					グリッドの登録：
				</text>
				<text name="password_text">
					グリッドパスワードのＵＲＩ：
				</text>
				<text name="search_text">
					グリッド検索：
				</text>
				<text name="message_text">
					グリッド・メッセージのＵＲＩ：
				</text>
			</panel>
		</panel>
		<panel label="その他" name="opensim_misc_panel">
			<check_box label="デバッグ検索" name="DebugSearch"/>
			<text name="search_url_debug_text">
				現在の検索ＵＲＬを上書きする（空欄の場合上書きされない）：
			</text>
			<button label="クリア" label_selected="クリア" name="clear_search_url_debug"/>
			<button label="選択" name="pick_current_search_url"/>
		</panel>
	</tab_container>
</panel>
