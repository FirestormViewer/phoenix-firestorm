<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="panel_im">
  <floater.string name="participant_added" value="[NAME]はこの会話に招待されました。" />
  <floater.string name="multiple_participants_added" value="[NAME]はこの会話に招待されました。" />

  <layout_stack name="ls_control_panel">
    <layout_panel name="slide_panel">
      <button name="slide_left_btn" />
      <button name="slide_right_btn" />
      <icon name="dummy_icon_slider" />
    </layout_panel>

    <layout_panel name="gprofile_panel">
      <button name="group_info_btn" tool_tip="このグループのプロフィールを表示する" />
    </layout_panel>

    <layout_panel name="profile_panel">
      <button name="view_profile_btn" tool_tip="この住民のプロフィールを表示する" />
    </layout_panel>

    <layout_panel name="friend_panel">
      <button tool_tip="この住民をフレンドに追加する" name="add_friend_btn" />
    </layout_panel>

    <layout_panel name="tp_panel">
      <menu_button name="teleport_btn" tool_tip="テレポートをオファーするかリクエストする" />
    </layout_panel>

    <layout_panel name="share_panel">
      <button tool_tip="この住民にアイテムを送付" name="share_btn" />
    </layout_panel>

    <layout_panel name="pay_panel">
      <button tool_tip="この住民にお金を送付" name="pay_btn" />
    </layout_panel>

    <layout_panel name="call_btn_panel">
      <button tool_tip="このチャットにボイスチャットを追加" name="call_btn" />
    </layout_panel>

    <layout_panel name="end_call_btn_panel">
      <button tool_tip="ボイスチャットを終了" name="end_call_btn" />
    </layout_panel>

    <layout_panel name="voice_ctrls_btn_panel">
      <button tool_tip="ボイスのプロパティ" name="voice_ctrls_btn" />
    </layout_panel>

    <layout_panel name="im_history_btn_panel">
      <button tool_tip="この会話の過去の履歴を開きます。" name="im_history_btn" />
    </layout_panel>

    <layout_panel name="add_participant_panel">
      <button tool_tip="この会話に誰かを追加" name="add_participant_btn" />
    </layout_panel>

    <layout_panel name="send_sysinfo_btn_panel">
      <button tool_tip="システム情報を送信" name="send_sysinfo_btn" />
    </layout_panel>

    <layout_panel name="lp_options_btn">
      <menu_button tool_tip="チャットオプション" name="chat_options_btn" />
    </layout_panel>
    <layout_panel name="lp_chat_search_btn">
      <button name="chat_search_btn" tool_tip="チャットを検索" />
    </layout_panel>

    <!-- Checkbox for FS prefix on support groups -->
    <layout_panel name="support_panel">
      <icon name="dummy_icon_support_group" />
      <check_box label="バージョンの指定" name="FSSupportGroupChatPrefix_toggle" tool_tip="このグループに送信されたメッセージの先頭に、現在のビューアーのバージョン、ビューアのスキン、オペレーティングシステム、ＲＬＶａのステータスを追加します。" />
    </layout_panel>
    <layout_panel name="testing_panel">
      <icon name="dummy_icon_support_group_testing" />
      <check_box label="ビルドの指定" name="FSSupportGroupChatPrefixTesting_toggle" tool_tip="このグループに送信されたメッセージの先頭に、現在のビューアーのバージョン、ビューアのスキン、オペレーティングシステム、ＲＬＶａのステータスを追加します。（これはサポートグループとは別のものです。）" />
    </layout_panel>
    <!-- END: FS Prefix -->
    <layout_panel name="lp_bar">
      <icon name="dummy_icon" />
    </layout_panel>
  </layout_stack>

  <layout_stack name="chat_stack">
    <layout_panel name="im_control_panel_holder">
      <panel name="panel_im_control_panel" />
    </layout_panel>
    <layout_panel name="panel_im_control_lp">
      <layout_stack name="im_panels">
        <layout_panel name="chat_holder">
          <fs_chat_history name="chat_history" />
        </layout_panel>
        <layout_panel name="unread_messages_holder">
          <icon name="unread_messages_background" />
          <text name="unread_messages_text">未読のメッセージ：[NUM]件</text>
        </layout_panel>
        <layout_panel name="chat_layout_panel">
          <layout_stack name="input_panels">
            <layout_panel name="input_editor_layout_panel">
              <chat_editor name="chat_editor" />
            </layout_panel>
            <layout_panel name="input_button_layout_panel">
              <button name="send_chat" label="送信" tool_tip="ＩＭで送信します。" />
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
  </layout_stack>
</floater>