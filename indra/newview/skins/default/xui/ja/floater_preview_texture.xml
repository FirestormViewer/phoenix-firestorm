<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="preview_texture">
  <floater.string name="Title">テクスチャ：[NAME]</floater.string>
  <floater.string name="Copy">インベントリにコピー</floater.string>
  <floater.string name="UploadInfo">・[UPLOADER]によって[DATE_TIME]にアップロードされました。</floater.string>
  <text name="desc txt">説明：</text>
  <line_editor name="desc" />
  <text_editor name="uploader_date_time" />
  <button label="プロフィール" name="openprofile" />
  <panel name="dimensions_panel">
    <text name="dimensions">[WIDTH]px✕[HEIGHT]px</text>
    <button name="copyuuid" tool_tip="ＵＵＩＤをクリップボードにコピーします。" />
    <text name="aspect_ratio">アスペクト比をプレビュー</text>
    <combo_box name="combo_aspect_ratio" tool_tip="固定されたアスペクト比でプレビューします。" />
  </panel>
  <panel name="button_panel">
    <button name="btn_refresh" />
    <button label="ＯＫ" name="Keep" />
    <button label="破棄" name="Discard" />
    <flyout_button label="保存…" name="save_tex_btn">
      <flyout_button.item label="ＴＧＡ形式で保存" name="save_item_tga" value="format_tga" />
      <flyout_button.item label="ＰＮＧ形式で保存" name="save_item_png" value="format_png" />
    </flyout_button>
  </panel>
</floater>