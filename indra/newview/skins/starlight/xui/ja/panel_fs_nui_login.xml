<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_login">
  <panel.string name="forgot_password_url">https://secondlife.com/my/account/request.php?lang=ja-JP</panel.string>
  <string name="ServerComboTooltip">An existing grid or a grid URI </string>
  <web_browser name="login_html" />
  <layout_stack name="ui_stack">
    <layout_panel name="ui_elastic_pad_left" />
    <layout_panel name="ui_container">
      <icon name="sl_logo_small" />

      <layout_stack name="vert_stack_left">
        <layout_panel name="1st_row">
          <layout_stack name="1st_row_stack">
            <layout_panel name="login">

              <combo_box label="Username" tool_tip="The username you chose when you registered, like bobsmith12 or Steller Sunshine" name="username_combo" width="201" />
              <check_box label="Remember username" name="remember_username_check" />
            </layout_panel>
            <!-- login -->
            <layout_panel name="delete_container">
              <button tool_tip="Remove this username" label="" name="remove_user_btn" />
            </layout_panel>
            <!-- delete_container -->
            <layout_panel name="password_container">
              <!-- The max length might be changed in FSPanelLogin.cpp for Opensim! -->
              <line_editor name="password_edit" label="Password" />
              <check_box label="Remember password" name="remember_check" />
            </layout_panel>
            <!-- password_container -->
            <layout_panel name="start_location_panel">
              <combo_box label="Start location" name="start_location_combo">
                <combo_box.item label="Last location" name="MyLastLocation" value="last" />
                <combo_box.item label="Home" name="MyHome" value="home" />
                <combo_box.item label="&lt;Type region name&gt;" name="Typeregionname" value="" />
              </combo_box>
            </layout_panel>
            <!-- start_location_panel -->
          </layout_stack>
          <!-- 1st_row_stack -->
        </layout_panel>
        <!-- 1st_row -->

        <layout_panel name="2nd_row">
          <layout_stack name="2nd_row_stack">
            <layout_panel name="grid_panel">
              <text name="grid_login_text">Grid:</text>
              <combo_box name="server_combo" />
            </layout_panel>

            <layout_panel name="mode_selection">
              <text name="mode_selection_text">Mode:</text>
              <combo_box tool_tip="Select which style of viewer you are most familiar with to set your defaults to appropriately." name="mode_combo">
                <combo_box.drop_down_button font="SansSerifLarge" />
                <combo_box.item label="Firestorm" name="Firestorm" value="settings_firestorm.xml" />
                <combo_box.item label="Phoenix" name="Phoenix" value="settings_phoenix.xml" />
                <combo_box.item label="[VIEWER_GENERATION]" name="V3" value="settings_v3.xml" />
                <combo_box.item label="Hybrid" name="Hybrid" value="settings_hybrid.xml" />
                <combo_box.item label="Latency" name="Latency" value="settings_latency.xml" />
                <combo_box.item label="Text" name="Text" value="settings_text.xml" />
              </combo_box>
            </layout_panel>

          </layout_stack>
          <!-- 2nd_row_stack -->
        </layout_panel>
        <!-- 2nd_row -->
      </layout_stack>
      <!-- vert_stack -->

      <button label="Log In" name="connect_btn" />
      <text name="create_new_account_text">Create an account</text>
      <text name="forgot_password_text">Forgot password?</text>
    </layout_panel>
    <layout_panel name="ui_elastic_pad_right" />
  </layout_stack>
</panel>