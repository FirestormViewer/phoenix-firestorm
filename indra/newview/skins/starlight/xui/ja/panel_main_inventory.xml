<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Things" name="main inventory panel">
  <panel.string name="Itemcount" />
  <panel.string name="ItemcountFetching">Fetching [ITEM_COUNT] Elements... [FILTER]</panel.string>
  <panel.string name="ItemcountCompleted">[ITEM_COUNT] Elements [FILTER]</panel.string>
  <panel.string name="ItemcountUnknown">Fetched [ITEM_COUNT] Elements [FILTER]</panel.string>
  <text name="ItemcountText" tool_tip="[ITEMS] Items, [CATEGORIES] Folders">Elements:</text>
  <combo_box name="filter_combo_box">
    <combo_box.item value="filter_type_all" label="All Types" />
    <combo_box.item value="filter_separator" label="------------" />
    <combo_box.item value="filter_type_animations" label="Animations" />
    <combo_box.item value="filter_type_calling_cards" label="Calling Cards" />
    <combo_box.item value="filter_type_clothing" label="Clothing / Body Parts" />
    <combo_box.item value="filter_type_gestures" label="Gestures" />
    <combo_box.item value="filter_type_landmarks" label="Landmarks" />
    <combo_box.item value="filter_type_notecards" label="Notecards" />
    <combo_box.item value="filter_type_objects" label="Objects" />
    <combo_box.item value="filter_type_scripts" label="Scripts" />
    <combo_box.item value="filter_type_sounds" label="Sounds" />
    <combo_box.item value="filter_type_textures" label="Textures" />
    <combo_box.item value="filter_type_snapshots" label="Snapshots" />
    <combo_box.item value="filter_type_meshes" label="Meshes" />
    <combo_box.item value="filter_type_settings" label="Settings" />
    <combo_box.item value="filter_separator" label="------------" />
    <combo_box.item value="filter_type_custom" label="Custom..." />
  </combo_box>
  <menu_button tool_tip="Show search visibility options" name="options_visibility_btn" />
  <filter_editor label="Filter Inventory" name="inventory search editor" tool_tip="Type in one or more words to search for, separated by '+' " />
  <tab_container name="inventory filter tabs">
    <inventory_panel label="Inventory" name="All Items" />
    <recent_inventory_panel label="Recent" name="Recent Items" />
    <worn_inventory_panel label="Worn" name="Worn Items" />
  </tab_container>
  <panel name="bottom_panel">
    <panel name="options_gear_btn_panel">
      <menu_button tool_tip="Show additional options" name="options_gear_btn" />
    </panel>
    <panel name="add_btn_panel">
      <button name="add_btn" tool_tip="Add new item" />
    </panel>
    <panel name="new_inventory_panel">
      <button name="new_inv_btn" tool_tip="Additional Inventory Window" />
    </panel>
    <panel name="collapse_panel">
      <button label="Collapse All" name="collapse_btn" tool_tip="Collapse Folders" />
    </panel>
    <panel name="expand_panel">
      <button label="Expand All" name="expand_btn" tool_tip="Expand Folders" />
      <!-- icon name="dummy_icon"
        / -->
    </panel>
    <panel name="trash_btn_panel">
      <dnd_button name="trash_btn" tool_tip="Remove selected item" />
    </panel>
  </panel>
</panel>